<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" StyleSheet="ListChoice.css">

  <s:Push Id="objectType" Value="$param1.Metadata.{$param2}.Type"></s:Push>
  <s:Push Id="objectName" Value="$param1.Metadata.{$param2}.Name"></s:Push>
  <s:Push Id="items" Value="select * from $dao.{$objectType}.{$objectName}"></s:Push>

  <c:VerticalLayout>

    <c:HorizontalLayout CssClass="topNavigator">
      <c:Button CssClass="btnBack" OnClickAction="Back"/>
      <c:TextView Text="#parameters#" />
      <c:Button CssClass="btnForward" OnClickAction="Back" />
    </c:HorizontalLayout>

    <c:HorizontalLine/>

    <c:VerticalLayout CssClass="header">
      <c:VerticalLayout CssClass="grid">
        <c:HorizontalLayout>
          <c:VerticalLayout>
            <c:TextView Text="$objectName" CssClass="H1"></c:TextView>
            <c:TextView Text="#select_answer#" CssClass="H2"></c:TextView>
          </c:VerticalLayout>
        </c:HorizontalLayout>
      </c:VerticalLayout>
    </c:VerticalLayout>
    
    <c:HorizontalLine/>
    
    <c:ScrollView>

      <c:VerticalLayout CssClass="grid">

        <s:Iterator Id="item" Value="$items">

          <c:HorizontalLayout OnClickAction="UpdateValue:$param1,$param2,$item.Id;Back">
            <c:VerticalLayout>
              <c:TextView Text="$item.Description" CssClass="H1"></c:TextView>
            </c:VerticalLayout>
            <c:Image/>
          </c:HorizontalLayout>

          <c:HorizontalLine/>
          
        </s:Iterator>

      </c:VerticalLayout>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>



