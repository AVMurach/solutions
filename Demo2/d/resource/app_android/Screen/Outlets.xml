<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack">

  <s:Push Id="search" Value="$param1"/>
  <s:Push Id="outlets" Value="$Facade.GetOutlets($search)"></s:Push>

  <c:VerticalLayout>

    <c:HorizontalLayout CssClass="topNavigator">
      <c:Button CssClass="btnBack" OnEvent="Back" OnClickAction="Script:Workflow.DoRollback" />
      <c:TextView Text="#outlets#" />
      <c:Button CssClass="btnForward" OnEvent="Forward" OnClickAction="Script:Workflow.DoBack" />
    </c:HorizontalLayout>

    <c:HorizontalLine/>

    <c:HorizontalLayout CssClass="search">

      <c:HorizontalLayout >
        <c:Image />
        <c:EditText Id="edtSearch" Text="$search"></c:EditText>
      </c:HorizontalLayout>
      <c:Button Text="#search#" OnClickAction="Script:Workflow.DoRefresh,$edtSearch.Text"></c:Button>

    </c:HorizontalLayout>

    <c:HorizontalLine/>

    <c:ScrollView CssClass="grid">

        <s:Iterator Id="outlet" Value="$outlets">

          <c:HorizontalLayout OnClickAction="Script:Workflow.DoAction,Select,$outlet">

            <c:VerticalLayout>
              <c:TextView Text="$outlet.Description" CssClass="H1"></c:TextView>
              <c:TextView Text="$outlet.Address" CssClass="H2"></c:TextView>
            </c:VerticalLayout>

            <c:Image/>

          </c:HorizontalLayout>

          <c:HorizontalLine/>
        </s:Iterator>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>