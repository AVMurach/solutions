<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" xmlns:d="DefaultScope">

  <s:Push Id="outlet" Value="$param1"></s:Push>
  <s:Push Id="parameter" Value="$param2"></s:Push>
  <s:Push Id="parameterValue" Value="$param3"></s:Push>

  <s:If Test="$parameterValue==null">

    <s:Push Id="defaultValue" Value="" />
    <s:If Test="$parameter.DataTypeAsObject.Description=='Boolean'">
      <s:Push Id="defaultValue" Value="False" />
    </s:If>
    
    <s:Push Id="parameterValue">
      <d:Catalog.Outlet_Parameters Ref="$outlet.Id" Parameter="$parameter.Id" Value="$defaultValue"/>
    </s:Push>

  </s:If>
  
  <s:Push Id="parameter" Value="$parameterValue.ParameterAsObject"></s:Push>

  <c:VerticalLayout>

    <c:HorizontalLayout CssClass="topNavigator">
      <c:Button CssClass="btnBack" OnClickAction="Back"/>
      <c:TextView Text="#parameters#" />
      <c:Button CssClass="btnForward" OnClickAction="Back"/>
    </c:HorizontalLayout>

    <c:ScrollView CssClass="grid">

        <c:HorizontalLayout>
          <c:VerticalLayout>
            <c:TextView Text="$parameter.Description" CssClass="H1"></c:TextView>
            <c:TextView Text="#insert_answer#" CssClass="H2"></c:TextView>
          </c:VerticalLayout>          
        </c:HorizontalLayout>

        <c:HorizontalLine/>

        <c:HorizontalLayout>
          <s:If Test="$parameter.DataTypeAsObject.Description=='Boolean'">
            <c:CheckBox Value="$parameterValue.Value" CssClass="H2"></c:CheckBox>  
          </s:If>
          <s:Else>
            <s:If Test="$parameter.DataTypeAsObject.Description=='Integer'">
              <c:EditText Value="$parameterValue.Value" CssClass="H2" AutoFocus="True" Keyboard="numeric"></c:EditText>
            </s:If>
            <s:Else>
              <s:If Test="$parameter.DataTypeAsObject.Description=='Decimal'">
                <c:EditText Value="$parameterValue.Value" CssClass="H2" AutoFocus="True" Keyboard="numeric"></c:EditText>
              </s:If>
              <s:Else>
                <c:EditText Value="$parameterValue.Value" CssClass="H2" AutoFocus="True"></c:EditText>
              </s:Else>
            </s:Else>
          </s:Else>
        </c:HorizontalLayout>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>



