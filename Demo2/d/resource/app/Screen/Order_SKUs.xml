<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack">

  <s:Push Id="order" Value="$param1"></s:Push>
  <s:Push Id="search" Value="$param2"></s:Push>

  <s:Push Id="skus" Value="$Facade.GetSKUs($search)"></s:Push>

  <s:Push Id="groups" Value="$Facade.GetSKUGroups($search)"></s:Push>

  <c:VerticalLayout>

    <c:HorizontalLayout CssClass="topNavigator">
      <c:Button CssClass="btnBack" OnClickAction="Script:Workflow.DoBack"/>
      <c:TextView Text="#sku#" />
      <c:Button CssClass="btnForward" OnClickAction="Script:Workflow.DoBack"/>
    </c:HorizontalLayout>

    <c:HorizontalLine/>

    <c:HorizontalLayout CssClass="search">

      <c:HorizontalLayout >
        <c:Image />
        <c:EditText Id="edtSearch" Text="$search"></c:EditText>
      </c:HorizontalLayout>
      <c:Button Text="#search#" OnClickAction="RefreshScreen:$param1,$edtSearch.Text"></c:Button>

    </c:HorizontalLayout>

    <c:HorizontalLine/>

    <c:ScrollView CssClass="grid">

  <s:Iterator Id="group" Value="$groups">
	  <c:HorizontalLayout CssClass ="gridEdit">
	    <c:VerticalLayout>
	       <c:TextView Text = "$group.Description" CssClass = "H1"></c:TextView>
	    </c:VerticalLayout>

	  </c:HorizontalLayout>

    <c:HorizontalLine CssClass="editLine"/>

    <s:Push Id="skusByGroup" Value="$Facade.GetSKUs($search,$group.Id)"></s:Push>

    <s:Iterator Id="sku" Value="$skusByGroup">

      <c:HorizontalLayout OnClickAction="Script:Workflow.DoAction,Select,$order,$sku,null" CssClass="gridWhite">
        <c:VerticalLayout>
          <c:TextView Text="$sku.Description" CssClass="H1"></c:TextView>
          <c:HorizontalLayout>
            <c:TextView Text="#price2#" CssClass="H2"></c:TextView>
            <c:TextView Text="$sku.Price" CssClass="H2"></c:TextView>
          </c:HorizontalLayout>
        </c:VerticalLayout>

        <c:Image/>

      </c:HorizontalLayout>
      <c:HorizontalLine/>

  </s:Iterator>

          </s:Iterator>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>