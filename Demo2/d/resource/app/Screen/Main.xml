<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack">

  <c:VerticalLayout>
    <c:HorizontalLayout  CssClass="#logo#">
      <c:Indicator/>
    </c:HorizontalLayout>
    <c:HorizontalLayout CssClass="separatorOfLogo">
    </c:HorizontalLayout>
    <c:HorizontalLayout>
      <c:Button CssClass="btnSchedule" OnClickAction="Script:Workflow.DoAction,ScheduledVisit"></c:Button>
      <c:Button CssClass="btnVisit" OnClickAction="Script:Workflow.DoAction,UnscheduledVisit"></c:Button>
      <c:Button CssClass="btnOrder" OnClickAction="Script:Workflow.DoAction,Order"></c:Button>
    </c:HorizontalLayout>
    <c:HorizontalLayout CssClass="caption">
      <c:TextView Text="#schedule#"/>
      <c:TextView Text="#visit#"/>
      <c:TextView Text="#orders#"/>
    </c:HorizontalLayout>
    <c:HorizontalLayout>
      <c:Button CssClass="btnOutlets" OnClickAction="Script:Workflow.DoAction,Outlets"></c:Button>
      <c:Button CssClass="btnTodo" OnClickAction="Script:Workflow.DoAction,ToDo"></c:Button>
      <c:Button CssClass="btnKpi" OnClickAction="Script:Workflow.DoAction,Targets"></c:Button>
    </c:HorizontalLayout>
    <c:HorizontalLayout CssClass="caption">
      <c:TextView Text="#outlets#"/>
      <c:TextView Text="#todo#"/>
      <c:TextView Text="#targets#"/>
    </c:HorizontalLayout>
    <c:HorizontalLayout>
      <c:Button CssClass="btnDistr" OnClickAction="Script:Workflow.DoAction,Distr"></c:Button>
      <c:Button CssClass="btnSettings"></c:Button>
      <c:Button CssClass="btnSync" OnClickAction="Script:DB.DoSync"></c:Button>
    </c:HorizontalLayout>
    <c:HorizontalLayout CssClass="caption">
      <c:TextView Text="#stock#"/>
      <c:TextView Text="#settings#"/>
      <c:TextView Text="#sync#"/>
    </c:HorizontalLayout>
  </c:VerticalLayout>

</c:Screen>