<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" xmlns:d="DefaultScope">

  <s:Push Id="order" Value="$param1"></s:Push>

  <c:VerticalLayout>

    <c:DockLayout CssClass="top_navigator">
      <c:Button CssClass="btn_back" OnEvent="Back" OnClickAction="$Workflow.DoBack()"/>
      <c:Button CssClass="btn_forward" OnEvent="Forward" OnClickAction="$Workflow.DoForward($workflow.visit)"/>
      <c:TextView Text="#commentary#" />
    </c:DockLayout>
    
    <c:MemoEdit Value="$order.Commentary" AutoFocus="True"></c:MemoEdit>

  </c:VerticalLayout>

</c:Screen>



