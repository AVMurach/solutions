<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" xmlns:d="DefaultScope">

  <s:Push Id="order" Value="$param1"></s:Push>

  <c:VerticalLayout>

    <c:HorizontalLayout CssClass="topNavigator">
      <c:Button CssClass="btnBack" OnClickAction="Script:Workflow.DoBack"/>
      <c:TextView Text="#commentary#" />
      <c:Button CssClass="btnForward" OnClickAction="Script:Workflow.DoCommit"/>
    </c:HorizontalLayout>

    <c:ScrollView CssClass="grid">

        <c:HorizontalLayout>
          <c:VerticalLayout>
		<c:TextView Text="#insert_text#" CssClass="H2"></c:TextView>
		<c:HorizontalLine/>
		<c:EditText Value="$order.Commentary" CssClass="H1" AutoFocus="True"></c:EditText>
          </c:VerticalLayout>          
        </c:HorizontalLayout>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>



