<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" xmlns:d="DefaultScope">

  <s:Push Id="order" Value="$param1"></s:Push>

  <c:VerticalLayout>

    <c:HorizontalLayout CssClass="topNavigator">
      <c:Button CssClass="btnBack" OnClickAction="Back"/>
      <c:TextView Text="Commentary" />
      <c:Button CssClass="btnForward" OnClickAction="Commit"/>
    </c:HorizontalLayout>

    <c:ScrollView>

      <c:VerticalLayout CssClass="grid">

        <c:HorizontalLayout>
          <c:VerticalLayout>
            <c:EditText Value="$order.Commentary" CssClass="H1"></c:EditText>
            <c:TextView Text="Select value.." CssClass="H2"></c:TextView>
          </c:VerticalLayout>          
        </c:HorizontalLayout>

        <c:HorizontalLine/>

      </c:VerticalLayout>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>



