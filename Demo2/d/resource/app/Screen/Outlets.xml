<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack">

  <s:Push Id="outlets" Value="select * from $dao.Catalog.Outlet"></s:Push>

  <c:VerticalLayout>

    <c:HorizontalLayout CssClass="topNavigator">
      <c:Button CssClass="btnBack" OnClickAction="Back"/>
      <c:TextView Text="#outlets#" />
      <c:Button CssClass="btnForward" OnClickAction="Back"/>
    </c:HorizontalLayout>

    <c:HorizontalLine/>

    <c:HorizontalLayout CssClass="search">

      <c:HorizontalLayout >
        <c:Image />
        <c:EditText></c:EditText>
      </c:HorizontalLayout>
      <c:Button Text="#search#"></c:Button>

    </c:HorizontalLayout>

    <c:HorizontalLine/>

    <c:ScrollView>

      <c:VerticalLayout CssClass="grid">

        <s:Iterator Id="outlet" Value="$outlets">

          <c:HorizontalLayout OnClickAction="Select:$outlet, ">

            <c:VerticalLayout>
              <c:TextView Text="$outlet.Description" CssClass="H1"></c:TextView>
              <c:TextView Text="$outlet.Address" CssClass="H2"></c:TextView>
            </c:VerticalLayout>

            <c:Image/>

          </c:HorizontalLayout>

          <c:HorizontalLine/>
        </s:Iterator>

      </c:VerticalLayout>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>