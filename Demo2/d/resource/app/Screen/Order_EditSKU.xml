<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" xmlns:d="DefaultScope">

  <s:Push Id="order" Value="$param1"></s:Push>
  <s:Push Id="sku" Value="$param2"></s:Push>
  <s:Push Id="orderitem" Value="$param3"></s:Push>
  <s:Push Id="unit" Value="$param4"></s:Push>
  <s:Push Id="discValue" Value="$param5"></s:Push>
  <s:Push Id="multiplier" Value="$Facade.GetMultiplier($unit, $sku, $orderitem)"></s:Push>

  <s:Push Id="orderitem" Value="$Facade.CreateOrderItemIfNotExist($order.Id,$sku,$orderitem,$unit,$multiplier,$discValue)"></s:Push>
  <s:Push Id="discValue" Value="$orderitem.Discount"></s:Push>
  <s:Push Id="baseQty" Value="$Facade.CalculateValue($orderitem, $multiplier)"></s:Push>

  <c:VerticalLayout>

    <c:DockLayout CssClass="topNavigator">
      <c:Button CssClass="btnBack" OnEvent="Back" OnClickAction="$Workflow.DoBack()"/>
      <c:Button CssClass="btnForward" OnEvent="Forward" OnClickAction="$Workflow.DoForward($order.OutletAsObject)"/>
      <c:TextView Text="#edit#" />
    </c:DockLayout>

    <c:ScrollView CssClass="grid">

      <c:HorizontalLayout CssClass="headerEdit" OnClickAction="$Workflow.DoRefresh($order,$sku,$orderitem,$unit,$discount.Text)">
        <c:VerticalLayout>
          <c:TextView Text="{$sku.Description}" CssClass="H1"></c:TextView>
          <c:TextView Text="#refreshScreen#" CssClass="H2"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>

      <c:HorizontalLine CssClass ="highlitedLine"/>

      <c:HorizontalLayout CssClass="hl2">
        <c:VerticalLayout>
          <c:TextView Text="$orderitem.Total" CssClass="H1"></c:TextView>
          <c:TextView Text="#price#" CssClass="H2"></c:TextView>
        </c:VerticalLayout>
        <c:VerticalLayout>
          <c:EditText Id="discount" Text="$discValue" CssClass="H1"></c:EditText>
          <c:TextView Text="#discount#/#markUp#" CssClass="H2"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>

      <c:HorizontalLine/>

      <c:HorizontalLayout  CssClass="hl2">
        <c:VerticalLayout>
          <c:EditText Value="$orderitem.Qty" CssClass="H1" Keyboard="numeric"></c:EditText>
          <c:TextView Text="#quantity#" CssClass="H2"></c:TextView>
        </c:VerticalLayout>
        <c:VerticalLayout>
          <c:TextView Text="$orderitem.UnitsAsObject.Description" CssClass="H1"></c:TextView>
          <c:TextView Text="#packUnit#" CssClass="H2"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>

      <c:HorizontalLayout CssClass="hl2">
        <c:VerticalLayout>
          <c:TextView Text="$baseQty" CssClass="H1"></c:TextView>
          <c:TextView Text="#quantity#" CssClass="H2"></c:TextView>
        </c:VerticalLayout>
        <c:VerticalLayout>
          <c:TextView Text="$sku.BaseUnitAsObject.Description" CssClass="H1"></c:TextView>
          <c:TextView Text="#baseUnit#" CssClass="H2"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>

      <c:HorizontalLine/>

      <c:HorizontalLayout CssClass="headerEdit">
        <c:VerticalLayout>
          <c:TextView Text="#selectUnit#" CssClass="H5"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>
      <c:HorizontalLine CssClass ="highlitedLine"/>

      <s:Push Id="units" Value="$Facade.GetUnits($sku.Id)"></s:Push>

      <s:Iterator Id="unit" Value="$units">

        <c:HorizontalLayout OnClickAction="$Workflow.DoRefresh($order,$sku,$orderitem,$unit)">
          <c:VerticalLayout>
            <c:TextView Text="$unit.PackAsObject.Description" CssClass="H1"></c:TextView>
          </c:VerticalLayout>
          <c:Image/>
        </c:HorizontalLayout>

        <c:HorizontalLine/>

      </s:Iterator>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>



