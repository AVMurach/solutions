<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" xmlns:d="DefaultScope">

  <s:Push Id="outlet" Value="$param1"></s:Push>
  
  <s:If Test="$workflow.order==null">
    <s:Push Id="workflow.order">
      <d:Document.Order Outlet="$outlet.Id" SR="$common.UserId" Date="$common.Now" DeliveryDate="$common.Now" Visit="$workflow.visit.Id"/>
    </s:Push>
  </s:If>
  
  <s:Push Id="items" Value="select * from $dao.Document.Order_SKUs where Ref==$workflow.order.Id"></s:Push>
  <s:Push Id="sum" Value="select sum(Qty*Price) from $items"></s:Push>
  <s:Push Id="qty" Value="select sum(Qty) from $items"></s:Push>

  <c:VerticalLayout>

    <c:HorizontalLayout CssClass="topNavigator">
      <c:Button CssClass="btnBack" OnClickAction="Rollback"/>
      <c:TextView Text="#order#" />
      <c:Button CssClass="btnForward" OnClickAction="Forward:$workflow.order"/>
    </c:HorizontalLayout>

    <c:HorizontalLine/>

    <c:VerticalLayout CssClass="header">
      <c:VerticalLayout  CssClass ="order">
        <c:HorizontalLayout OnClickAction="Add:$workflow.order">
          <c:VerticalLayout>
            <c:TextView Text="$sum" CssClass="H1"></c:TextView>
            <c:TextView Text="#totalamount#" CssClass="H2"></c:TextView>
          </c:VerticalLayout>
          <c:Image/>
        </c:HorizontalLayout>
      </c:VerticalLayout>
    </c:VerticalLayout>

    <c:HorizontalLine/>
    
    <c:ScrollView CssClass="grid">

        <s:Iterator Id="orderitem" Value="$items">

          <c:HorizontalLayout OnClickAction="Edit:$workflow.order,$orderitem.SKUAsObject,$orderitem">

            <c:VerticalLayout>
              <c:TextView Text="$orderitem.SKUAsObject.Description" CssClass="H1"></c:TextView>
              <c:HorizontalLayout>
                <c:TextView Text="#quantity#: {$orderitem.Qty}" CssClass="H2"></c:TextView>
                <s:Push Id="amount" Value="select sum(Qty*Price) from $items where SKU == orderitem.SKUAsObject.Id"></s:Push>
                <c:TextView Text="#amount#: {$amount}" CssClass="H2"></c:TextView>
              </c:HorizontalLayout>
            </c:VerticalLayout>

            <c:Image/>

          </c:HorizontalLayout>

          <c:HorizontalLine/>
        </s:Iterator>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>