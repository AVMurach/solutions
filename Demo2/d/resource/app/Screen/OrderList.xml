<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" xmlns:d="DefaultScope">

 
  <c:VerticalLayout>

    <c:HorizontalLayout CssClass="topNavigator">
      <c:Button CssClass="btnBack" OnEvent="Back" OnClickAction="Script:Workflow.DoRollback"/>
      <c:TextView Text="#orders#" />
      <c:Button CssClass="btnForward" OnClickAction="Script:Workflow.DoRollback"/>
    </c:HorizontalLayout>

    <c:HorizontalLine/>

    <s:Push Id ="orders" Value="$Facade.GetOrderList()"></s:Push>

    <c:VerticalLayout CssClass="header">
      <c:VerticalLayout  CssClass ="grid">
        <c:HorizontalLayout OnEvent="Forward" OnClickAction="Script:Workflow.DoForward">
          <c:VerticalLayout>
            <c:TextView Text="#newOrder#" CssClass="H5"></c:TextView>
          </c:VerticalLayout>
          <c:Image/>
        </c:HorizontalLayout>
      </c:VerticalLayout>
    </c:VerticalLayout>

    <c:HorizontalLine/>
    
    <c:ScrollView CssClass="grid">

      <s:Iterator Id="order" Value="$orders">
      
        <c:HorizontalLayout OnClickAction="Script:Workflow.DoAction,Select,$order.Outlet,null,$order">
          <c:VerticalLayout>
            <c:TextView Text="$order.OutletAsObject.Description" CssClass="H1"></c:TextView>
            <s:Push Id="checkedOrder" Value ="$Facade.AssignNumberIfNotExist($order)"></s:Push>
            <c:TextView Text="{$checkedOrder.Number}, {$order.Date}" CssClass="H2"></c:TextView>
          </c:VerticalLayout>
          <c:Image/>

        </c:HorizontalLayout>
        <c:HorizontalLine/>
        
      </s:Iterator>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>