<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack">

  <s:Push Id="outlets" Value="select * from $dao.Catalog.Outlet"></s:Push>

  <c:VerticalLayout>

    <c:DockLayout CssClass="topNavigator">
      <c:Button CssClass="btnBack" OnEvent="Back" OnClickAction="Back"/>
      <c:Button CssClass="btnForward" OnEvent="Forward" OnClickAction="Back"/>
      <c:TextView Text="#visit#" />
    </c:DockLayout>

    <c:HorizontalLine/>

    <c:HorizontalLayout CssClass="search">

      <c:DockLayout >
        <c:Image />
        <c:EditText></c:EditText>
      </c:DockLayout>
      <c:Button Text="#search#"></c:Button>

    </c:HorizontalLayout>

    <c:HorizontalLine/>

    <c:ScrollView  CssClass="grid">

      <s:Iterator Id="outlet" Value="$outlets">

        <c:HorizontalLayout OnClickAction="OpenScreen:UnscheduleVisit.xml,$outlet">

          <c:VerticalLayout>
            <c:TextView Text="$outlet.Description" CssClass="H1"></c:TextView>
            <c:TextView Text="$outlet.Address" CssClass="H2"></c:TextView>
          </c:VerticalLayout>

          <c:Image/>

        </c:HorizontalLayout>

        <c:HorizontalLine/>
      </s:Iterator>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>