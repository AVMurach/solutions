<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack">

  <s:Push Id="outlet" Value="$param1"></s:Push>
  <s:Push Id="visit" Value="$param2"></s:Push>
  <s:Push Id="tasks" Value="$Facade.GetTasks($outlet)"></s:Push>

  <c:VerticalLayout>

    <c:DockLayout CssClass="topNavigator">
      <c:Button CssClass="btnBack" OnEvent="Back" OnClickAction="$Workflow.DoBack()"/>
      <c:Button CssClass="btnForward" OnEvent="Forward" OnClickAction="$Workflow.DoForward($outlet,$visit)"/>
      <c:TextView Text="#tasks#" />
    </c:DockLayout>

    <c:HorizontalLine/>

    <c:ScrollView CssClass="grid">


      <s:If Test="$tasks==null">

        <c:HorizontalLayout>
          <c:VerticalLayout>
            <c:TextView Text="#no_tasks#" CssClass="H1"></c:TextView>
          </c:VerticalLayout>
        </c:HorizontalLayout>

      </s:If>

      <s:Else>

        <s:Iterator Id="task" Value="$tasks">

          <c:HorizontalLayout OnClickAction="$Workflow.DoAction(Select,$task,$visit,$outlet)">
            <c:VerticalLayout>
              <c:TextView Text="$task.TextTask" CssClass="H1"></c:TextView>
              <s:Push Id="descr" Value="$Facade.GetOutlet($task)"></s:Push>
              <c:TextView Text="{$descr}, {$task.PlanDate.DateString}" CssClass="H2"></c:TextView>
            </c:VerticalLayout>
            <c:Image/>
          </c:HorizontalLayout>
          <c:HorizontalLine/>

        </s:Iterator>
      </s:Else>


    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>