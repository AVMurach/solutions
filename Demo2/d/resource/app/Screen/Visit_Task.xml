<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" xmlns:d="DefaultScope">

  <s:Push Id="outlet" Value="$param3"></s:Push>
  <s:Push Id="visit" Value="$param2"></s:Push>
  <s:Push Id="task" Value="$param1"></s:Push>

  <s:Push Id="taskValue" Value="$Facade.CreateVisitTaskValueIfNotExists($visit,$task)"/>

  <c:VerticalLayout>

    <c:DockLayout CssClass="topNavigator">
      <c:Button CssClass="btnBack" OnEvent="Back" OnClickAction="$Workflow.DoBack()"/>
      <c:Button CssClass="btnForward" OnEvent="Forward" OnClickAction="$Workflow.DoBack()"/>
      <c:TextView Text="#task#" />
    </c:DockLayout>

    <c:HorizontalLine/>

    <c:ScrollView CssClass="grid">

      <c:HorizontalLayout CssClass="textBlock">
        <c:VerticalLayout>
          <c:HorizontalLayout>
            <c:TextView Text="$taskValue.TextTask" CssClass="H1"></c:TextView>
          </c:HorizontalLayout>
          <c:TextView Text="#description#" CssClass="H2"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>

      <c:HorizontalLine/>

      <c:HorizontalLayout>
        <c:VerticalLayout>
          <c:CheckBox Value="$taskValue.Result" CssClass="H1"></c:CheckBox>
          <c:TextView Text="#result#" CssClass="H2"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>

      <c:HorizontalLine/>

      <c:HorizontalLayout CssClass="textBlock">
        <c:VerticalLayout>
          <c:HorizontalLayout>
            <c:TextView Text="$task.Target" CssClass="H1"></c:TextView>
          </c:HorizontalLayout>
          <c:TextView Text="#target#" CssClass="H2"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>

      <c:HorizontalLine/>

      <c:HorizontalLayout>
        <c:VerticalLayout>
          <c:TextView Text="$task.PlanDate" CssClass="H1"></c:TextView>
          <c:TextView Text="#plandate#" CssClass="H2"></c:TextView>
        </c:VerticalLayout>

      </c:HorizontalLayout>

      <c:HorizontalLine/>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>