<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" xmlns:d="DefaultScope">

  <s:Push Id="visit" Value="$param1"></s:Push>
  <s:Push Id="question" Value="$param2"></s:Push>
  <s:Push Id="questionValue" Value="$param3"></s:Push>

  <s:If Test="$questionValue==null">

    <s:Push Id="defaultValue" Value="" />
    <s:If Test="$question.AnswerTypeAsObject.Description=='Boolean'">
      <s:Push Id="defaultValue" Value="False" />
    </s:If>
    
    <s:Push Id="questionValue">
      <d:Document.Visit_Questions Ref="$visit.Id" Question="$question.Id" Answer="$defaultValue"/>
    </s:Push>

  </s:If>

  <c:VerticalLayout>

    <c:HorizontalLayout CssClass="topNavigator">
      <c:Button CssClass="btnBack" OnClickAction="Back"/>
      <c:TextView Text="VLISCO GROUP" />
      <c:Button CssClass="btnForward" OnClickAction="Back"/>
    </c:HorizontalLayout>

    <c:ScrollView>

      <c:VerticalLayout CssClass="grid">

        <c:HorizontalLayout>
          <c:VerticalLayout>
            <c:TextView Text="$question.Description" CssClass="H1"></c:TextView>
            <c:TextView Text="Select value.." CssClass="H2"></c:TextView>
          </c:VerticalLayout>
        </c:HorizontalLayout>

        <c:HorizontalLine/>

        <c:HorizontalLayout>
          <s:If Test="$question.AnswerTypeAsObject.Description=='Boolean'">
            <c:CheckBox Value="$questionValue.Answer" CssClass="H2"></c:CheckBox>  
          </s:If>
          <s:Else>
            <c:EditText Value="$questionValue.Answer" CssClass="H2"></c:EditText>
          </s:Else>
        </c:HorizontalLayout>

      </c:VerticalLayout>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>



