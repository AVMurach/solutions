<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" xmlns:d="DefaultScope">

  <s:Push Id="outlet" Value="$param1"></s:Push>
  <s:Push Id="visit" Value="$param2"></s:Push>
  <s:Push Id="question" Value="$param3"></s:Push>

  <s:Push Id="questionValue" Value="$Facade.CreateVisitQuestionValueIfNotExists($visit,$question,$param4)"></s:Push>

  <c:VerticalLayout>

    <c:DockLayout CssClass="top_navigator">
      <c:Button CssClass="btn_back" OnEvent="Back" OnClickAction="$Workflow.DoBack()"/>
      <c:Button CssClass="btn_forward" OnEvent="Forward" OnClickAction="$Workflow.DoBack()"/>
      <c:TextView Text="#answer#" />
    </c:DockLayout>

    <c:ScrollView CssClass="grid">

      <c:HorizontalLayout>
        <c:VerticalLayout>
          <c:TextView Text="$question.Description" CssClass="H1"></c:TextView>
          <c:TextView Text="#typeanswer#" CssClass="H2"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>

      <c:HorizontalLine/>



      <c:HorizontalLayout>
        <s:If Test="$question.AnswerTypeAsObject.Description=='Boolean'">
          <c:CheckBox Value="$questionValue.Answer" CssClass="H1"></c:CheckBox>
        </s:If>
        <s:Else>
          <s:If Test="$question.AnswerTypeAsObject.Description=='Integer'">
            <c:EditText Value="$questionValue.Answer" CssClass="H1" AutoFocus="True" Keyboard="numeric"></c:EditText>
          </s:If>
          <s:Else>
            <s:If Test="$question.AnswerTypeAsObject.Description=='Decimal'">
              <c:EditText Value="$questionValue.Answer" CssClass="H1" AutoFocus="True" Keyboard="numeric"></c:EditText>
            </s:If>
            <s:Else>
              <c:EditText Value="$questionValue.Answer" CssClass="H1" AutoFocus="True"></c:EditText>
            </s:Else>
          </s:Else>
        </s:Else>
      </c:HorizontalLayout>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>



