<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" xmlns:d="DefaultScope">

  <s:Push Id="order" Value="$param1"></s:Push>
  <s:Push Id="sku" Value="$param2"></s:Push>
  <s:Push Id="orderitem" Value="$param3"></s:Push>
  <s:Push Id="unit" Value="$param4"></s:Push>

  <s:Push Id="orderitem" Value="$Facade.CreateOrderItemIfNotExist($order.Id,$sku,$orderitem,$unit)"></s:Push>

  <c:VerticalLayout>

    <c:HorizontalLayout CssClass="topNavigator">
      <c:Button CssClass="btnBack" OnEvent="Back" OnClickAction="Script:Workflow.DoBack"/>
      <c:TextView Text="#edit#" />
      <c:Button CssClass="btnForward" OnEvent="Forward" OnClickAction="Forward:$order.OutletAsObject"/>
    </c:HorizontalLayout>

    <c:ScrollView CssClass="grid">

      <c:HorizontalLayout CssClass="headerEdit">
        <c:VerticalLayout>
          <c:TextView Text="$sku.Description" CssClass="H1"></c:TextView>
          <c:TextView Text="#insert_answer#" CssClass="H2"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>

      <c:HorizontalLine CssClass ="highlitedLine"/>

      <c:HorizontalLayout CssClass="hl2">
        <c:VerticalLayout>
          <c:TextView Text="$orderitem.Total" CssClass="H1"></c:TextView>
          <c:TextView Text="#price#" CssClass="H2"></c:TextView>
        </c:VerticalLayout>
        <c:Button CssClass ="bthRefresh" OnClickAction="Script:Workflow.DoRefresh,$order,$sku,$orderitem"></c:Button>
        <c:VerticalLayout>
          <c:EditText Value="$orderitem.Discount" CssClass="H1" Keyboard="numPunc"></c:EditText>
          <c:TextView Text="#discount#/#markUp#" CssClass="H2"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>

      <c:HorizontalLine/>

      <c:HorizontalLayout  CssClass="hl2">
        <c:VerticalLayout>
          <c:EditText Value="$orderitem.Qty" AutoFocus="True" CssClass="H1"></c:EditText>
          <c:TextView Text="#quantity#" CssClass="H2"></c:TextView>
        </c:VerticalLayout>
        <c:VerticalLayout>
          <c:TextView Text="$orderitem.UnitsAsObject.Description" CssClass="H1"></c:TextView>
          <c:TextView Text="#selectUnit#" CssClass="H2"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>

      <c:HorizontalLayout CssClass="hl2">
        <c:VerticalLayout>

        </c:VerticalLayout>
        <c:VerticalLayout>
          <c:TextView Text="$sku.BaseUnitAsObject.Description" CssClass="H1"></c:TextView>
          <c:TextView Text="#baseUnit#" CssClass="H2"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>

      <c:HorizontalLine/>

      <s:Push Id="units" Value="$Facade.GetUnits($sku.Id)"></s:Push>

      <s:Iterator Id="unit" Value="$units">

        <c:HorizontalLayout OnClickAction="Script:Workflow.DoRefresh,$order,$sku,$orderitem,$unit">
          <c:VerticalLayout>
            <c:TextView Text="$unit.PackAsObject.Description" CssClass="H1"></c:TextView>
          </c:VerticalLayout>
          <c:Image/>
        </c:HorizontalLayout>

        <c:HorizontalLine/>

      </s:Iterator>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>



