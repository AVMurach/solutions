<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack">

  <c:VerticalLayout>

    <c:DockLayout CssClass="top_navigator">
      <c:Button CssClass="btn_back" OnEvent="Back" OnClickAction="$Workflow.DoBack()"/>
      <c:Button CssClass="btn_forward" OnEvent="Forward" OnClickAction="$Workflow.DoBack()"/>
      <c:TextView Text="#kpi#" />
    </c:DockLayout>

    <c:HorizontalLine/>

    <c:HorizontalLayout CssClass="search">

      <c:DockLayout >
        <c:Image />
        <c:EditText  Placeholder="#search#"></c:EditText>
      </c:DockLayout>
      <c:Button Text="#search#"></c:Button>

    </c:HorizontalLayout>

    <c:HorizontalLine/>

    <c:ScrollView CssClass="grid">

      <c:HorizontalLayout>

        <c:VerticalLayout>
          <c:TextView Text="Total bonus: 1230 EUR" CssClass="main_row"></c:TextView>

        </c:VerticalLayout>

      </c:HorizontalLayout>

      <c:HorizontalLine/>

      <c:HorizontalLayout>

        <c:VerticalLayout>
          <c:TextView Text="New outlets" CssClass="main_row"></c:TextView>
          <c:HorizontalLayout>
            <c:TextView Text="Target: 40" CssClass="description_row"></c:TextView>
            <c:TextView Text="Result: 15" CssClass="description_row"></c:TextView>
            <c:TextView Text="Bonus: 0" CssClass="description_row"></c:TextView>
          </c:HorizontalLayout>

        </c:VerticalLayout>

      </c:HorizontalLayout>

      <c:HorizontalLine/>

      <c:HorizontalLayout>

        <c:VerticalLayout>
          <c:TextView Text="New clients" CssClass="main_row"></c:TextView>
          <c:HorizontalLayout>
            <c:TextView Text="Target: 15" CssClass="description_row"></c:TextView>
            <c:TextView Text="Result: 10" CssClass="description_row"></c:TextView>
            <c:TextView Text="Bonus: 0" CssClass="description_row"></c:TextView>
          </c:HorizontalLayout>

        </c:VerticalLayout>

      </c:HorizontalLayout>

      <c:HorizontalLine/>

      <c:HorizontalLayout>

        <c:VerticalLayout>
          <c:TextView Text="Super Wax distribution" CssClass="main_row"></c:TextView>
          <c:HorizontalLayout>
            <c:TextView Text="Target: 32%" CssClass="description_row"></c:TextView>
            <c:TextView Text="Result: 33%" CssClass="description_row"></c:TextView>
            <c:TextView Text="Bonus: 800 EUR" CssClass="description_row"></c:TextView>
          </c:HorizontalLayout>

        </c:VerticalLayout>

      </c:HorizontalLayout>

      <c:HorizontalLine/>

      <c:HorizontalLayout>

        <c:VerticalLayout>
          <c:TextView Text="Visit Plan completion" CssClass="main_row"></c:TextView>
          <c:HorizontalLayout>
            <c:TextView Text="Target: 100%" CssClass="description_row"></c:TextView>
            <c:TextView Text="Result: 87%" CssClass="description_row"></c:TextView>
            <c:TextView Text="Bonus: 0" CssClass="description_row"></c:TextView>
          </c:HorizontalLayout>

        </c:VerticalLayout>

      </c:HorizontalLayout>

      <c:HorizontalLine/>

      <c:HorizontalLayout>

        <c:VerticalLayout>
          <c:TextView Text="Orders rate" CssClass="main_row"></c:TextView>
          <c:HorizontalLayout>
            <c:TextView Text="Target: 40%" CssClass="description_row"></c:TextView>
            <c:TextView Text="Result: 54%" CssClass="description_row"></c:TextView>
            <c:TextView Text="Bonus: 430 EUR" CssClass="description_row"></c:TextView>
          </c:HorizontalLayout>

        </c:VerticalLayout>

      </c:HorizontalLayout>

      <c:HorizontalLine/>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>