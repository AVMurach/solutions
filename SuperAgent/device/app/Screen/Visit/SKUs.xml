<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" StyleSheet="Visit_SKUs.css">

	<s:Push Id="outlet" Value="$workflow.outlet"></s:Push>
	<s:Push Id="visit" Value="$workflow.visit"></s:Push>
	<s:Push Id="SKUs" Value="$GetSKUsFromQuesionnaires($outlet)"></s:Push>
	<s:Push Id="workflow.sku_answ" Value="$ToInteger(0)"></s:Push>
	<s:Push Id="workflow.sku_qty" Value="$ToInteger(0)"></s:Push>

	<c:VerticalLayout>

		<c:DockLayout CssClass="top_navigator">
			<c:HorizontalLayout Id="btnBack" CssClass="btn_back" OnEvent="Back" OnClickAction="$GetActionAndBack()">
				<c:Image />
				<c:TextView Text="#back#" />
			</c:HorizontalLayout>
			<c:Button Id="btnForward" Text="#forward#" CssClass="btn_forward" OnEvent="Forward" OnClickAction="$CheckEmtySKUAndForward($outlet,$visit)" />
			<c:HorizontalLayout>
				<c:TextView Text="#distribution#" />
			</c:HorizontalLayout>
		</c:DockLayout>

		<c:HorizontalLayout CssClass="small_grid">
			<s:If Test="@regularAnswers">
				<c:HorizontalLayout CssClass="mode_left_button_on">
					<c:HorizontalLayout Id="regular" CssClass="select_zone" OnClick="$ChangeListAndRefresh(1)">
						<c:TextView Text="#regular#"></c:TextView>
					</c:HorizontalLayout>
				</c:HorizontalLayout>
				<c:HorizontalLayout CssClass="mode_right_button_off">
					<c:HorizontalLayout Id="nonregular" CssClass="select_zone" OnClick="$ChangeListAndRefresh(0)">
						<c:TextView Text="#nonregular#"></c:TextView>
					</c:HorizontalLayout>
				</c:HorizontalLayout>
			</s:If>
			<s:Else>
				<c:HorizontalLayout CssClass="mode_left_button_off">
					<c:HorizontalLayout Id="regular" CssClass="select_zone" OnClick="$ChangeListAndRefresh(1)">
						<c:TextView Text="#regular#"></c:TextView>
					</c:HorizontalLayout>
				</c:HorizontalLayout>
				<c:HorizontalLayout CssClass="mode_right_button_on">
					<c:HorizontalLayout Id="nonregular" CssClass="select_zone" OnClick="$ChangeListAndRefresh(0)">
						<c:TextView Text="#nonregular#"></c:TextView>
					</c:HorizontalLayout>
				</c:HorizontalLayout>
			</s:Else>
		</c:HorizontalLayout>

		<c:Image CssClass="4_scroll"></c:Image>
		<c:HorizontalLine />



		<c:ScrollView Id="grScrollView">

			<c:HorizontalLayout CssClass="margin_top"></c:HorizontalLayout>
			<c:HorizontalLine />

			<s:Iterator Id="sku" Value="$SKUs" Status="statusCount">
				<s:Push Id="index" Value="{$statusCount.Index}"></s:Push>

				<s:If Test="$UniqueSKU($sku.SKU)">
					<c:HorizontalLayout CssClass="grid" OnClick="$CreateItemAndShow($sku.SKU, $sku.visitSKUvalue, $index)">
						<c:VerticalLayout>
							<c:TextView Text="0 #of# 0" CssClass="description_row" />
							<c:TextView Text="$sku.Description" CssClass="main_row"></c:TextView>
						</c:VerticalLayout>
					</c:HorizontalLayout>
					<c:HorizontalLine />
					<s:If Test="$ShowChilds($index)">
						<s:Push Id="childs" Value="$GetChilds($sku.SKU)"></s:Push>
						<s:Iterator Id="child" Value="$childs" Status="statusCountCh">
							<s:Push Id="indexCh" Value="{$statusCountCh.Index}"></s:Push>
							<c:HorizontalLayout CssClass="child_grid">
							<c:VerticalLayout OnClick="$GoToQuestionAction($child.AnswerType, $child.Id, $sku.SKU, control{$indexCh})">
								<c:TextView Text="$child.Description" CssClass="description_row"></c:TextView>
								<s:If Test="$child.IsInputField==1">
									<c:EditText Id="control{$indexCh}" Text="$child.Answer" OnGetFocus = "$RemovePlaceHolder()" OnChange="$CreateVisitSKUValueIfNotExists($sku.SKU, $child.Id)" Keyboard="$child.KeyboardType" CssClass="main_row"></c:EditText>
								</s:If>
								<s:Else>
									<c:TextView Id="control{$index}" Text="$child.Answer" CssClass="answer_main_row"></c:TextView>
								</s:Else>								 								 
							</c:VerticalLayout>
						</c:HorizontalLayout>
						<c:HorizontalLine />
						
						</s:Iterator>
					</s:If>					
				</s:If>

			</s:Iterator>

		</c:ScrollView>

	</c:VerticalLayout>

</c:Screen>
