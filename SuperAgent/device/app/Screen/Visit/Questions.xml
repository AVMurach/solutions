<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" StyleSheet="Visit_SKUs.css">

	<s:Push Id="outlet" Value="$workflow.outlet"></s:Push>
	<s:Push Id="visit" Value="$workflow.visit"></s:Push>
	<s:Push Id="questions" Value="$GetQuestionsByQuestionnaires($outlet)"></s:Push>

	<c:VerticalLayout>

		<c:DockLayout CssClass="top_navigator">
			<c:HorizontalLayout Id="btnBack" CssClass="btn_back" OnEvent="Back" OnClickAction="$GetActionAndBack()">
				<c:Image />
				<c:TextView Text="#back#" />
			</c:HorizontalLayout>
			<s:If Test="@regularAnswers">
				<c:DockLayout Id="btnForward" CssClass="forward" OnClickAction="$CheckEmptyQuestionsAndForward($visit)" OnEvent="Forward">
					<c:VerticalLayout></c:VerticalLayout>
					<c:TextView Text="33)"/>
					<c:Image/>
					<c:TextView Text="#forward# ("/>					
				</c:DockLayout>
			</s:If>
			<s:Else><c:Button Id="btnForward" Text="#forward#" CssClass="btn_forward" OnEvent="Forward" OnClickAction="$CheckEmptyQuestionsAndForward($visit)" /></s:Else>			
			<c:HorizontalLayout>
				<c:TextView Text="#questions#" />
			</c:HorizontalLayout>
		</c:DockLayout>
		
		<c:HorizontalLayout CssClass="small_grid">
			<s:If Test="@regularAnswers">
				<c:HorizontalLayout CssClass="mode_left_button_on">
					<c:HorizontalLayout Id="regular" CssClass="select_zone" OnClick="$ChangeListAndRefresh(1)">
						<c:TextView Text="#regular#"></c:TextView>
					</c:HorizontalLayout>
				</c:HorizontalLayout>
				<c:HorizontalLayout CssClass="mode_right_button_off">
					<c:HorizontalLayout Id="nonregular" CssClass="select_zone" OnClick="$ChangeListAndRefresh(0)">
						<c:TextView Text="#nonregular#"></c:TextView>
					</c:HorizontalLayout>
				</c:HorizontalLayout>
			</s:If>
			<s:Else>
				<c:HorizontalLayout CssClass="mode_left_button_off">
					<c:HorizontalLayout Id="regular" CssClass="select_zone" OnClick="$ChangeListAndRefresh(1)">
						<c:TextView Text="#regular#"></c:TextView>
					</c:HorizontalLayout>
				</c:HorizontalLayout>
				<c:HorizontalLayout CssClass="mode_right_button_on">
					<c:HorizontalLayout Id="nonregular" CssClass="select_zone" OnClick="$ChangeListAndRefresh(0)">
						<c:TextView Text="#nonregular#"></c:TextView>
					</c:HorizontalLayout>
				</c:HorizontalLayout>
			</s:Else>						
		</c:HorizontalLayout>
		

		<!-- progress picture -->
		<c:Image CssClass="3_scroll"></c:Image>
		<c:HorizontalLine />


		<c:ScrollView Id="grScrollView">
		
			<s:If Test="@regularAnswers">
				<c:HorizontalLayout CssClass="required_grid">
					<c:TextView Text="#requiredLeft# "></c:TextView>
					<c:Image/>
					<c:TextView Text=" 33"></c:TextView>
				</c:HorizontalLayout>
			<c:HorizontalLine />
			</s:If>
			<s:Else>
				<c:HorizontalLayout CssClass="margin_top"></c:HorizontalLayout>				
			</s:Else>
			<c:HorizontalLine />

			<s:Iterator Id="question" Value="$questions" Status="statusCount">

				<s:If Test="$UniqueQuestion($question.Question, $question.AnswerType, $question.Answer)">

					<s:Push Id="index" Value="{$statusCount.Index}"></s:Push>

					<c:HorizontalLayout CssClass="grid">
						<c:VerticalLayout OnClickAction="$GoToQuestionAction($question.AnswerType, $visit, control{$index}, $question.Question)">
							<c:TextView Text="$question.Description" CssClass="description_row"></c:TextView>
							<s:If Test="$question.IsInputField=='1'">
								<c:MemoEdit Id="control{$index}" Text="$question.Answer" OnGetFocus = "$RemovePlaceHolder()" OnChange="$AssignQuestionValue($question.Question)" Keyboard="$question.KeyboardType" CssClass="main_row"></c:MemoEdit>
							</s:If>
							<s:Else>
								<c:TextView Id="control{$index}" Text="$question.Answer" CssClass="main_row"></c:TextView>
							</s:Else>
														
						</c:VerticalLayout>
					</c:HorizontalLayout>
					<c:HorizontalLine />

				</s:If>

			</s:Iterator>

		</c:ScrollView>

	</c:VerticalLayout>

</c:Screen>