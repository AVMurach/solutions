<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack"
	xmlns:d="DefaultScope">

	<s:Push Id="outlet" Value="$param1"></s:Push>
	<s:Push Id="parameter" Value="$param2"></s:Push>
	<s:Push Id="parameterValue"
		Value="$Facade.CreateOutletParameterValueIfNotExists($outlet,$parameter,$param3)"></s:Push>

	<c:VerticalLayout>

		<c:DockLayout CssClass="top_navigator">
			<c:HorizontalLayout Id="btnBack" OnEvent="Back"
				CssClass="btn_back"
				OnClickAction="$Facade.CheckIfEmptyAndBack($parameterValue, Value, Catalog, Outlet_Parameters)">
				<c:Image />
				<c:TextView Text="#client#" />
			</c:HorizontalLayout>
			<c:Button Id="btnForward" Text="#forward#" CssClass="btn_forward"
				OnClickAction="$Facade.CheckIfEmptyAndBack($parameterValue, Value, Catalog, Outlet_Parameters)" />
			<c:TextView Text="#parameters#" />
		</c:DockLayout>
		<c:HorizontalLine />

		<c:ScrollView Id="grScrollView">

			<c:HorizontalLayout CssClass="grid">
				<c:VerticalLayout>
					<c:TextView Text="#parameter#" CssClass="description_row"></c:TextView>
					<c:TextView Text="$parameter.Description" CssClass="main_row"></c:TextView>
				</c:VerticalLayout>
			</c:HorizontalLayout>
			<c:HorizontalLine />

			<c:HorizontalLayout CssClass="caption_grid">
				<c:TextView Text="#insert_answer#"></c:TextView>
			</c:HorizontalLayout>
			<c:HorizontalLine />

			<c:HorizontalLayout CssClass="parameter_grid">
				<s:If Test="$parameter.DataTypeAsObject.Description=='Boolean'">
					<c:TextView Text="$parameterValue.Value" CssClass="yes_TextView"></c:TextView>
					<c:Button Text="#YES#" CssClass="yes_button"
						OnClickAction="$Facade.AssignParameterValue($parameterValue, Value, true)"></c:Button>
					<c:Button Text="#NO#" CssClass="yes_button"
						OnClickAction="$Facade.AssignParameterValue($parameterValue, Value, false)"></c:Button>
				</s:If>
				<s:Else>
					<s:If Test="$parameter.DataTypeAsObject.Description=='Integer'">
						<c:EditText Value="$parameterValue.Value" AutoFocus="true"
							Keyboard="numeric"></c:EditText>
					</s:If>
					<s:Else>
						<s:If Test="$parameter.DataTypeAsObject.Description=='Decimal'">
							<c:EditText Value="$parameterValue.Value" AutoFocus="True"
								Keyboard="numeric"></c:EditText>
						</s:If>
						<s:Else>
							<c:EditText Value="$parameterValue.Value" AutoFocus="True"></c:EditText>
						</s:Else>
					</s:Else>
				</s:Else>
			</c:HorizontalLayout>

		</c:ScrollView>

	</c:VerticalLayout>

</c:Screen>



