<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" xmlns:d="DefaultScope">

	<s:Push Id="outlet" Value="$param1"></s:Push>

	<c:VerticalLayout>
		<c:DockLayout CssClass="top_navigator">
			<c:DockLayout CssClass="btn_back" OnClickAction="$DoBack()">
				<c:Image />
				<c:TextView Text="#back#" />
			</c:DockLayout>
			<c:DockLayout CssClass="btn_space" />
			<c:HorizontalLayout>
				<c:TextView Text="#map#" />
			</c:HorizontalLayout>			
		</c:DockLayout>
		<c:HorizontalLine CssClass="b_line" />

		<s:If Test="$HasCoordinates($outlet)">
			<c:WebMapGoogle Id="map" />
		</s:If>
		<s:Else>
			<c:HorizontalLayout CssClass="grid">
				<c:VerticalLayout>
					<c:TextView Text="#noCoordinates#" CssClass="main_row"></c:TextView>
				</c:VerticalLayout>
			</c:HorizontalLayout>
		</s:Else>

	</c:VerticalLayout>

</c:Screen>