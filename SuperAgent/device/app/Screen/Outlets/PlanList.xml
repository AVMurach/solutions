<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" StyleSheet="Visit_SKUs.css">

	<s:Push Id="outlet" Value="$param1"></s:Push>

	<c:DockLayout>

		<c:HorizontalLayout Id="btnCancel" CssClass="bottom_btn">
			<c:VerticalLayout OnEvent="Back" OnClickAction="$DoBack()">
				<c:TextView Text="#back#" CssClass="left_tv"></c:TextView>
			</c:VerticalLayout>
			<c:VerticalLayout Id="btnAdd" OnEvent="Forward" OnClickAction="$CreatePlan($outlet)">
				<c:TextView Text="#add#" CssClass="right_tv"></c:TextView>
			</c:VerticalLayout>
		</c:HorizontalLayout>
		<c:HorizontalLine CssClass="b_line" />

		<c:ScrollView Id="grScrollView">

			<c:HorizontalLayout CssClass="empty_caption_grid" />
			<c:HorizontalLine />

			<s:Iterator Id="plan" Value="$GetPlans($outlet)" Status="statusCount">

				<c:DockLayout CssClass="parameter_grid" OnClickAction="$SetNewDate($plan.Id, $outlet)">
					<c:TextView Text="$plan.PlanDate"></c:TextView>
					<c:Image />
				</c:DockLayout>
				<c:HorizontalLine />

			</s:Iterator>

		</c:ScrollView>

	</c:DockLayout>

</c:Screen>