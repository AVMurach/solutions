<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" StyleSheet="CreateOutlet.css">

	<s:Push Id="contact" Value="$CreateContactIfNotExist($param1, $param2)" />

	<c:DockLayout>

		<c:HorizontalLayout Id="btnDone" CssClass="bottom_btn" OnEvent="Back" OnClickAction="$SaveAndBack($contact)">
			<c:TextView Text="#ready#"></c:TextView>
		</c:HorizontalLayout>
		<c:HorizontalLine CssClass="b_line" />

		<c:ScrollView Id="grScrollView">
			<c:HorizontalLayout CssClass="empty_caption_grid" />
			<c:HorizontalLine />

			<c:HorizontalLayout CssClass="grid">
				<c:VerticalLayout>
					<c:TextView Text="#contactName#" CssClass="description_row"></c:TextView>
					<c:EditText Value="$contact.ContactName" Placeholder="-" CssClass="main_row" />
				</c:VerticalLayout>
			</c:HorizontalLayout>
			<c:HorizontalLine />

			<c:HorizontalLayout CssClass="grid">
				<c:VerticalLayout>					
					<c:TextView Text="#position#" CssClass="description_row"></c:TextView>
					<c:EditText Value="$contact.Position" Placeholder="-" CssClass="main_row" />
				</c:VerticalLayout>
			</c:HorizontalLayout>
			<c:HorizontalLine />

			<c:HorizontalLayout CssClass="grid">
				<c:VerticalLayout CssClass="partialW">
					<c:TextView Text="#phone#" CssClass="description_row"></c:TextView>
					<c:EditText Value="$contact.PhoneNumber" Placeholder="-" Keyboard="numeric" CssClass="main_row" />
				</c:VerticalLayout>
				<c:VerticalLayout CssClass="phone" OnClickAction="$SavePhoneAndCall($contact)"></c:VerticalLayout>
			</c:HorizontalLayout>
			<c:HorizontalLine />

			<c:HorizontalLayout CssClass="grid">
				<c:VerticalLayout>
					<c:TextView Text="#email#" CssClass="description_row"></c:TextView>
					<c:EditText Value="$contact.Email" Placeholder="-" CssClass="main_row" />
				</c:VerticalLayout>
			</c:HorizontalLayout>
			<c:HorizontalLine />

		</c:ScrollView>

	</c:DockLayout>

</c:Screen>