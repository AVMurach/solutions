<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" StyleSheet="CreateOutlet.css">

	<s:Push Id="outlet" Value="$CreateOutlet()"></s:Push>
	<s:Push Id="territory" Value="$GetTerritory()"></s:Push>

	<c:DockLayout>

		<c:HorizontalLayout Id="btnCancel" CssClass="bottom_btn">
			<c:VerticalLayout OnEvent="Back" OnClickAction="$DeleteAndBack($outlet)">
				<c:TextView CssClass="left_tv" Text="#cancel#" />
			</c:VerticalLayout>
			<c:VerticalLayout Id="btnSave" OnClickAction="$SaveNewOutlet($outlet)">
				<c:TextView CssClass="right_tv" Text="#save#" />
			</c:VerticalLayout>
		</c:HorizontalLayout>
		<c:HorizontalLine CssClass="b_line" />

		<c:ScrollView Id="grScrollView">
			<c:HorizontalLayout CssClass="empty_caption_grid" />
			<c:HorizontalLine />

			<c:HorizontalLayout CssClass="grid">
				<c:VerticalLayout>
					<c:TextView Text="#outlet_description#" CssClass="description_row"></c:TextView>
					<c:MemoEdit Id="outletName" AutoFocus="True" Value="$outlet.Description" CssClass="main_row" />
				</c:VerticalLayout>
			</c:HorizontalLayout>
			<c:HorizontalLine />

			<c:HorizontalLayout CssClass="grid" OnClick="$DoSelectTerr($territory,Id,$outletTerritory,#outlet_territory#)">
				<c:VerticalLayout>
					<c:TextView Text="#outlet_territory#" CssClass="description_row"></c:TextView>
					<c:TextView Id="outletTerritory" Text="$territory.Description" CssClass="main_row" />
				</c:VerticalLayout>
			</c:HorizontalLayout>
			<c:HorizontalLine />
			
			<c:HorizontalLayout CssClass="grid">
				<c:VerticalLayout>
					<c:TextView Text="#address#" CssClass="description_row"></c:TextView>
					<c:MemoEdit Id="outletAddress" Value="$outlet.Address" CssClass="main_row" />
				</c:VerticalLayout>
			</c:HorizontalLayout>
			<c:HorizontalLine />

			<c:HorizontalLayout CssClass="grid" OnClickAction="$DoSelect($outlet,Class,$outletClass)">
				<c:VerticalLayout>
					<c:TextView Text="#outlet_class#" CssClass="description_row"></c:TextView>
					<c:TextView Id="outletClass" Text="$outlet.Class.Description" CssClass="main_row" />
				</c:VerticalLayout>
			</c:HorizontalLayout>
			<c:HorizontalLine />

			<c:HorizontalLayout CssClass="grid" OnClickAction="$DoSelect($outlet,Type,$outletType)">
				<c:VerticalLayout>
					<c:TextView Text="#outlet_type#" CssClass="description_row"></c:TextView>
					<c:TextView Id="outletType" Text="$outlet.Type.Description" CssClass="main_row" />
				</c:VerticalLayout>
			</c:HorizontalLayout>
			<c:HorizontalLine />

			<!-- <c:HorizontalLayout CssClass="grid" OnClickAction="$DoSelect($outlet,Distributor,$outletDistr)"> -->
			<c:HorizontalLayout CssClass="grid" OnClickAction="$SaveAndDoAction(SelectDistr, $outlet)">
				<c:VerticalLayout>
					<c:TextView Text="#distributor#" CssClass="description_row"></c:TextView>
					<c:TextView Id="outletDistr" Text="$outlet.Distributor.Description" CssClass="main_row" />
				</c:VerticalLayout>
			</c:HorizontalLayout>
			<c:HorizontalLine />


			<c:HorizontalLayout CssClass="end_of_block" />
		</c:ScrollView>



	</c:DockLayout>

</c:Screen>