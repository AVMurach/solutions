<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack">

  <c:VerticalLayout>
    <c:HorizontalLayout CssClass="#logo#"/>
    <c:VerticalLayout CssClass="menu">
      <c:HorizontalLayout>
        <c:Button CssClass="btn_schedule" OnClickAction="$Workflow.DoAction(ScheduledVisit)"/>
        <c:Button CssClass="btn_visit" OnClickAction="$Workflow.DoAction(UnscheduledVisit)"/>
        <c:Button CssClass="btn_order" OnClickAction="$Workflow.DoAction(Order)"/>
      </c:HorizontalLayout>
      <c:HorizontalLayout CssClass="title">
        <c:TextView Text="#schedule#"/>
        <c:TextView Text="#visit#"/>
        <c:TextView Text="#orders#"/>
      </c:HorizontalLayout>

      <c:HorizontalLayout>
        <c:Button CssClass="btn_outlets" OnClickAction="$Workflow.DoAction(Outlets)"/>
        <c:Button CssClass="btn_todo" OnClickAction="$Workflow.DoAction(ToDo)"/>
        <c:Button CssClass="btn_kpi"></c:Button>
      </c:HorizontalLayout>
      <c:HorizontalLayout CssClass="title">
        <c:TextView Text="#outlets#"/>
        <c:TextView Text="#todo#"/>
        <c:TextView Text="#targets#"/>
      </c:HorizontalLayout>

      <c:HorizontalLayout>
        <c:Button CssClass="btn_distr" OnClickAction="$Workflow.DoAction(Distr)"/>
        <c:Button CssClass="btn_settings"/>
        <c:HorizontalLayout CssClass="btn_sync" OnClickAction="$DB.DoSync()">
          <c:Indicator/>
        </c:HorizontalLayout>
      </c:HorizontalLayout>
      <c:HorizontalLayout CssClass="title">
        <c:TextView Text="#stock#"/>
        <c:TextView Text="#settings#"/>
        <c:TextView Text="#sync#"/>
      </c:HorizontalLayout>
    </c:VerticalLayout>
  </c:VerticalLayout>

</c:Screen>