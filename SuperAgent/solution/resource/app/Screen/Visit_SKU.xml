<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" xmlns:d="DefaultScope">

  <s:Push Id="outlet" Value="$param1"></s:Push>
  <s:Push Id="visit" Value="$param2"></s:Push>
  <s:Push Id="sku" Value="$param3"></s:Push>
  <s:Push Id="questionnaires" Value="$param5"></s:Push>
  <s:Push Id="skuValue" Value="$Facade.CreateVisitSKUValueIfNotExists($visit,$sku,$param4,$questionnaires)"></s:Push>

  <c:VerticalLayout>

    <c:DockLayout CssClass="top_navigator">
      <c:Button Id="btnBack" CssClass="btn_back" OnEvent="Back" OnClickAction="$Workflow.DoBack()"/>
      <c:Button Id="btnForward" CssClass="btn_forward" OnEvent="Forward" OnClickAction="$Workflow.DoBack()"/>
      <c:TextView Text="#answer#" />
    </c:DockLayout>

    <c:ScrollView Id="grScrollView" CssClass="grid">
      <s:Push Id="useInQuestionnaire" Value="$Facade.CheckQuestionExistence($questionnaires, Available, $sku)"></s:Push>
      <s:If Test="$useInQuestionnaire">
        <c:HorizontalLayout>
          <c:VerticalLayout>
            <c:CheckBox Value="$skuValue.Available" CssClass="main_row"></c:CheckBox>
            <c:TextView Text="#available#" CssClass="description_row"></c:TextView>
          </c:VerticalLayout>
        </c:HorizontalLayout>
        <c:HorizontalLine/>
      </s:If>

      <s:Push Id="useInQuestionnaire" Value="$Facade.CheckQuestionExistence($questionnaires, Facing, $sku)"></s:Push>
      <s:If Test="$useInQuestionnaire">
        <c:HorizontalLayout>
          <c:VerticalLayout>
            <c:EditText Value="$skuValue.Facing" CssClass="main_row" Keyboard="numeric"></c:EditText>
            <c:TextView Text="#facing#" CssClass="description_row"></c:TextView>
          </c:VerticalLayout>
        </c:HorizontalLayout>
        <c:HorizontalLine/>
      </s:If>

      <s:Push Id="useInQuestionnaire" Value="$Facade.CheckQuestionExistence($questionnaires, Stock, $sku)"></s:Push>
      <s:If Test="$useInQuestionnaire">
        <c:HorizontalLayout>
          <c:VerticalLayout>
            <c:EditText Value="$skuValue.Stock" CssClass="main_row" Keyboard="numeric"></c:EditText>
            <c:TextView Text="#stock#" CssClass="description_row"></c:TextView>
          </c:VerticalLayout>
        </c:HorizontalLayout>
        <c:HorizontalLine/>
      </s:If>

      <s:Push Id="useInQuestionnaire" Value="$Facade.CheckQuestionExistence($questionnaires, Price, $sku)"></s:Push>
      <s:If Test="$useInQuestionnaire">
        <c:HorizontalLayout>
          <c:VerticalLayout>
            <c:EditText Value="$skuValue.Price" CssClass="main_row" Keyboard="numeric"></c:EditText>
            <c:TextView Text="#price#" CssClass="description_row"></c:TextView>
          </c:VerticalLayout>
        </c:HorizontalLayout>
        <c:HorizontalLine/>
      </s:If>

      <s:Push Id="useInQuestionnaire" Value="$Facade.CheckQuestionExistence($questionnaires, MarkUp, $sku)"></s:Push>
      <s:If Test="$useInQuestionnaire">
        <c:HorizontalLayout>
          <c:VerticalLayout>
            <c:EditText Value="$skuValue.MarkUp" CssClass="main_row" Keyboard="numeric"></c:EditText>
            <c:TextView Text="#markUp#" CssClass="description_row"></c:TextView>
          </c:VerticalLayout>
        </c:HorizontalLayout>
        <c:HorizontalLine/>
      </s:If>

      <s:Push Id="useInQuestionnaire" Value="$Facade.CheckQuestionExistence($questionnaires, OutOfStock, $sku)"></s:Push>
      <s:If Test="$useInQuestionnaire">
        <c:HorizontalLayout>
          <c:VerticalLayout>
            <c:CheckBox Value="$skuValue.OutOfStock" CssClass="main_row"></c:CheckBox>
            <c:TextView Text="#outOfStock#" CssClass="description_row"></c:TextView>
          </c:VerticalLayout>
        </c:HorizontalLayout>
        <c:HorizontalLine/>
      </s:If>
      
      <s:Push Id="useInQuestionnaire" Value="$Facade.CheckQuestionExistence($questionnaires, Snapshot, $sku)"></s:Push>
      <s:If Test="$useInQuestionnaire">
        <c:HorizontalLayout>
          <c:VerticalLayout>
            <c:TextView Text="$skuValue.Snapshot" CssClass="main_row"></c:TextView>
            <c:TextView Text="#outOfStock#" CssClass="description_row"></c:TextView>
          </c:VerticalLayout>
        </c:HorizontalLayout>
        <c:HorizontalLine/>
      </s:If>


    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>




