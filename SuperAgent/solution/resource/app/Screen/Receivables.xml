<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack">

  <s:Push Id="visit" Value="$workflow.visit"/>
  <s:Push Id="receivables" Value="$Facade.GetReceivables($visit.Outlet)"></s:Push>
  <s:Push Id="autoSpread" Value="$Facade.GetSpreadValue($param1, $workflow.autoSpread)"/>
  <s:Push Id="workflow.autoSpread" Value="True"/>
  <s:Push Id="workflow.encashment" Value="$Facade.CreateEncashmentIfNotExist($workflow.visit)"></s:Push>
  <s:Push Id="encashment" Value="$workflow.encashment"></s:Push>

  <c:VerticalLayout>

    <c:DockLayout CssClass="top_navigator">  
      <c:Button Id="btnBack" CssClass="btn_back" OnEvent="Back" OnClickAction="$Workflow.DoBack()"/>
      <c:Button Id="btnForward" CssClass="btn_forward" OnEvent="Forward" OnClickAction="$Workflow.DoForward($visit)"/>
      <c:TextView Text="#receivables#" />
    </c:DockLayout>

    <c:HorizontalLine/>

    <c:ScrollView Id="grScrollView" CssClass="grid">

      <c:HorizontalLayout CssClass="header_edit_block">
        <c:VerticalLayout CssClass="half_width">
          <s:Push Id="receivableAmount" Value="$Facade.GetAmount($receivables)"></s:Push>
          <c:TextView Text="$receivableAmount" CssClass="main_row"></c:TextView>
          <c:TextView Text="#receivableAmount#" CssClass="description_row"></c:TextView>
        </c:VerticalLayout>
        <c:VerticalLayout CssClass="half_width">
          <s:Push Id="encashmentAmount" Value="$Facade.GetEncAmount($param3, $autoSpread, $encashment)"></s:Push>
          <c:EditText Id="encashmentAttribute" Text="$encashmentAmount" CssClass="main_row" Keyboard="numeric" AutoFocus="True"></c:EditText>
          <s:Push Id="encashment" Value="$Facade.AssignValue($encashment, EncashmentAmount, $encashmentAttribute.Text, int)"></s:Push>
          <c:TextView Text="#encashmentAmount#" CssClass="description_row"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>
      <c:HorizontalLine/>

      <c:HorizontalLayout  OnClickAction="$Workflow.DoRefresh($workflow.visit,True,$encashmentAttribute.Text)">
        <c:VerticalLayout>
          <c:TextView Text="#spreadOnDocuments#" CssClass="caption_row"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>
      <c:HorizontalLine/>

      <s:Push Id="SumToSpread" Value="$Facade.ToFloat($encashmentAmount)"></s:Push>
      <s:Iterator Id="receivableDoc" Value="$receivables">

        <c:HorizontalLayout OnClickAction="$Workflow.DoAction(Select,$receivableDoc,$visit)">
          <c:VerticalLayout>
            <c:TextView Text="$receivableDoc.DocumentName" CssClass="main_row"></c:TextView>
            
              <s:If Test="$autoSpread=='True'">
                <s:Push Id="encItem" Value ="$Facade.GetEncashmentItem($receivableDoc.DocumentName, $encashment)"></s:Push>
                <s:Push Id="areEqual" Value = "$Facade.AreEqual($SumToSpread, 0)"></s:Push>
                <s:If Test="$areEqual==False">
                  <s:Push Id="encItem" Value="$Facade.SpreadOnItem($encItem,$SumToSpread,$encashment,$receivableDoc)"></s:Push>
                </s:If>
                <s:If Test="$encItem != null">
                  <s:Push Id="encItem" Value="$Facade.ClearIfZeroSum($encItem,$SumToSpread)"></s:Push>
                <c:TextView Text="#encashmentSum#: {$encItem.EncashmentSum}" CssClass="description_row"></c:TextView>
                  <s:Push Id="SumToSpread" Value="$Facade.GetDifference($SumToSpread,$encItem.EncashmentSum)"></s:Push>
                </s:If>
                <s:Else>
                  <c:TextView Text="#documentSum#: {$receivableDoc.DocumentSum}" CssClass="description_row"></c:TextView>
                </s:Else>
              </s:If>
              <s:Else>
                <s:Push Id="encItem" Value ="$Facade.GetEncashmentItem($receivableDoc.DocumentName, $encashment)"></s:Push>
                <s:If Test="$encItem != null">
                  <s:Push Id="encItem" Value="$Facade.ClearIfZeroSum($encItem,$SumToSpread)"></s:Push>
                  <c:TextView Text="#encashmentSum#: {$encItem.EncashmentSum}" CssClass="description_row"></c:TextView>
                </s:If>
                <s:Else>
                  <c:TextView Text="#documentSum#: {$receivableDoc.DocumentSum}" CssClass="description_row"></c:TextView>
                </s:Else>
              </s:Else>
           
          </c:VerticalLayout>
          <c:Image/>
        </c:HorizontalLayout>
        <c:HorizontalLine/>
      
      </s:Iterator>

      <c:HorizontalLayout>
        <c:VerticalLayout>
          <c:EditText Value="$workflow.encashment.DocNumber" Keyboard="numeric" CssClass="main_row"></c:EditText>
          <c:TextView Text="#docNumber#" CssClass="description_row"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>
      <c:HorizontalLine/>

      <c:HorizontalLayout>
        <c:VerticalLayout>
          <c:EditText Value="$workflow.encashment.NameSurname" CssClass="main_row"></c:EditText>
          <c:TextView Text="#nameSurname#" CssClass="description_row"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>
      <c:HorizontalLine/>

      <c:HorizontalLayout>
        <c:VerticalLayout>
          <c:EditText Value="$workflow.encashment.Commentary" CssClass="main_row"></c:EditText>
          <c:TextView Text="#commentary#" CssClass="description_row"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>
      <c:HorizontalLine/>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>