<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack">

  <s:Push Id="order" Value="$workflow.order"></s:Push>
  <s:Push Id="search" Value="$param2"></s:Push>

  <s:Push Id="groups" Value="$Facade.GetSKUGroups($search)"></s:Push>

  <c:VerticalLayout>

    <c:DockLayout CssClass="top_navigator">
      <c:Button Id="btnBack" CssClass="btn_back" OnEvent="Back" OnClickAction="$Workflow.DoBack()"/>
      <c:Button Id="btnForward" CssClass="btn_grey_forward"/>
      <c:TextView Text="#sku#" />
    </c:DockLayout>

    <c:HorizontalLine/>

    <c:HorizontalLayout CssClass="search">
      
      <s:Push Id="filterClass" Value="$Facade.FilterButtonClass()"></s:Push>
      <c:Button Id="btnFilter" CssClass="$filterClass" OnClickAction="$Workflow.DoAction(SetFilter)"></c:Button>
      <c:DockLayout >
        <c:Image />
        <c:EditText Id="edtSearch" Text="$search"></c:EditText>
      </c:DockLayout>
      <c:Button Id="btnSearch" Text="#search#" OnClickAction="$Facade.ClearAndRefresh($param1,$edtSearch.Text)"></c:Button>

    </c:HorizontalLayout>

    <c:HorizontalLine/>

    <c:ScrollView Id="grScrollView" CssClass="grid">

      <s:Iterator Id="group" Value="$groups">
        <s:Push Id="skusByGroup" Value="$Facade.GetSKUs($search,$group.Id,$order.PriceList)"></s:Push>

        <s:If Test="$groupIsNotEmpty">
        <c:HorizontalLayout CssClass ="gridEdit">
            <c:VerticalLayout>
              <c:TextView Text = "$group.Description" CssClass = "main_row"></c:TextView>
            </c:VerticalLayout>
          </c:HorizontalLayout>
          <c:HorizontalLine CssClass="editLine"/>

          <s:Iterator Id="sku" Value="$skusByGroup">
            <c:HorizontalLayout OnClickAction="$Workflow.DoAction(SelectSKU, $sku.SKUAsObject, $sku.Price)" CssClass="gridWhite">
              <c:VerticalLayout>
                <c:TextView Text="$sku.SKUAsObject.Description" CssClass="main_row"></c:TextView>

                <c:HorizontalLayout>
                  <c:TextView Text="#price2# {$sku.Price}  #stock#: {$sku.SKUAsObject.CommonStock}" CssClass="description_row"></c:TextView>
                </c:HorizontalLayout>

              </c:VerticalLayout>
              <c:Image/>

            </c:HorizontalLayout>
            <c:HorizontalLine/>

          </s:Iterator>

        </s:If>
        
      </s:Iterator>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>