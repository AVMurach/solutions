<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack">

  <s:Push Id="order" Value="$param1"></s:Push>
  <s:Push Id="search" Value="$param2"></s:Push>

  <s:Push Id="groups" Value="$Facade.GetSKUGroups($search, $common.UserId)"></s:Push>

  <c:VerticalLayout>

    <c:DockLayout CssClass="top_navigator">
      <c:Button CssClass="btn_back" OnEvent="Back" OnClickAction="$Workflow.DoBack()"/>
      <c:Button CssClass="btn_forward" OnEvent="Forward" OnClickAction="$Workflow.DoBack()"/>
      <c:TextView Text="#sku#" />
    </c:DockLayout>

    <c:HorizontalLine/>

    <c:HorizontalLayout CssClass="search">

      <c:DockLayout >
        <c:Image />
        <c:EditText Id="edtSearch" Text="$search"></c:EditText>
      </c:DockLayout>
      <c:Button Text="#search#" OnClickAction="$Workflow.DoRefresh($param1,$edtSearch.Text)"></c:Button>

    </c:HorizontalLayout>

    <c:HorizontalLine/>

    <c:ScrollView CssClass="grid">

      <s:Iterator Id="group" Value="$groups">
        <s:Push Id="skusByGroup" Value="$Facade.GetSKUs($search,$group.SKUGroup,$order.PriceList)"></s:Push>
        <s:Push Id="groupIsEmpty" Value="$Facade.CountCollection($skusByGroup)"></s:Push>
        <s:If Test="$groupIsEmpty != 0">

          <c:HorizontalLayout CssClass ="gridEdit">
            <c:VerticalLayout>
              <c:TextView Text = "$group.SKUGroupAsObject.Description" CssClass = "main_row"></c:TextView>
            </c:VerticalLayout>
          </c:HorizontalLayout>
          <c:HorizontalLine CssClass="editLine"/>

          <s:Iterator Id="sku" Value="$skusByGroup">

            <c:HorizontalLayout OnClickAction="$Workflow.DoAction(Select,$order,$sku.SKUAsObject,null,$sku.Price)" CssClass="gridWhite">
              <c:VerticalLayout>
                <c:TextView Text="$sku.SKUAsObject.Description" CssClass="main_row"></c:TextView>
                
                <c:HorizontalLayout>
                  <c:TextView Text="#price2#" CssClass="description_row"></c:TextView>
                  <c:TextView Text="$sku.Price" CssClass="description_row"></c:TextView>
                  <c:TextView Text="#stock#" CssClass="description_row"></c:TextView>
                  <c:TextView Text="$sku.SKUAsObject.Stock" CssClass="description_row"></c:TextView>
                </c:HorizontalLayout>
                
              </c:VerticalLayout>
              <c:Image/>

            </c:HorizontalLayout>
            <c:HorizontalLine/>

          </s:Iterator>
        </s:If>

      </s:Iterator>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>