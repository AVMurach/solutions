<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" xmlns:d="DefaultScope">

  <s:Push Id="visitPlans" Value="$param1"></s:Push>

  <c:VerticalLayout>
    <c:DockLayout CssClass="top_navigator">
      <c:Button CssClass="btn_back" OnEvent="Back" OnClickAction="$Workflow.DoBack()"/>
      <c:Button CssClass="btn_grey_forward" OnEvent="Forward"/>
      <c:TextView Text="#map#" />
    </c:DockLayout>

    <s:If Test="$Facade.HasCoordinates($visitPlans)">
      <c:WebMapGoogle Id="map"/>
    </s:If>
    <s:Else>
      <c:ScrollView CssClass="grid">
        <c:HorizontalLayout>
          <c:VerticalLayout>
            <c:TextView Text="#no_visitPlans#" CssClass="main_row"></c:TextView>
          </c:VerticalLayout>
        </c:HorizontalLayout>
      </c:ScrollView>
    </s:Else>


  </c:VerticalLayout>

</c:Screen>