<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" xmlns:d="DefaultScope">

  <s:Push Id="order" Value="$workflow.order"></s:Push>
  <s:Push Id="sku" Value="$param1"></s:Push>  
  <s:Push Id="price" Value="$param2"></s:Push>
  <s:Push Id="orderitem" Value="$param3"></s:Push>
  <s:Push Id="multiplier" Value="$Facade.GetMultiplier($sku.Id, $orderitem)"></s:Push>
  <s:Push Id="features" Value="$Facade.GetFeatures($sku.Id)"></s:Push>
  <s:Push Id="orderitem" Value="$Facade.CreateOrderItemIfNotExist($order.Id,$sku,$orderitem,$price,$features)"></s:Push>
  <s:Push Id="baseQty" Value="$Facade.GetMultiple($orderitem.Qty, $multiplier)"></s:Push>
  <s:Push Id="ismarkup" Value="$Facade.ConvertToBoolean1($orderitem.Discount)"></s:Push>
  

  <c:VerticalLayout>

    <c:DockLayout CssClass="top_navigator">
      <c:Button Id="btnBack" CssClass="btn_back" OnEvent="Back" OnClickAction="$Workflow.DoBack()"/>
      <c:Button Id="btnForward" CssClass="btn_forward" OnEvent="Forward" OnClickAction="$Workflow.DoForward($order.OutletAsObject)"/>
      <c:TextView Text="#edit#" />
    </c:DockLayout>

    <c:ScrollView Id="grScrollView" CssClass="grid">
      
      <s:Push Id="featureDescr" Value="$Facade.GetFeatureDescr($orderitem.FeatureAsObject)"></s:Push>
      
      <c:HorizontalLayout CssClass="header_edit_block">
        <c:VerticalLayout CssClass="partial_width" OnClickAction="$Facade.CountPrice($orderitem,$discountEdit.Text,$discCheckbox.Checked)">          
          <c:TextView Text="{$sku.Description}{$featureDescr}" CssClass="main_row"></c:TextView>
          <c:TextView Text="#countPrice#" CssClass="description_row"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>
      <c:HorizontalLine/>

      <c:HorizontalLayout CssClass="33">
        <c:VerticalLayout>
          <c:TextView Id ="orderItemTotalId" Text="$orderitem.Total" CssClass="main_row"></c:TextView>
          <c:TextView Text="#price#" CssClass="description_row"></c:TextView>
        </c:VerticalLayout>
        <c:VerticalLayout>
          <c:EditText Value="$orderitem.Qty" CssClass="main_row" Keyboard="numeric"></c:EditText>
          <c:TextView Text="#quantity#" CssClass="description_row"></c:TextView>
        </c:VerticalLayout>
        <c:VerticalLayout OnClickAction="$Facade.ChangeUnit($sku, $orderitem, $discountEdit.Text, $discCheckbox.Checked, $price)">
          <c:TextView Id="itemUnits" Text="$orderitem.UnitsAsObject.Description" CssClass="main_row"></c:TextView>
          <c:TextView Text="#packUnit#" CssClass="description_row"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>
      <c:HorizontalLine/>

      <c:HorizontalLayout  Id="btnSpread" CssClass="33">
        <c:VerticalLayout>
          <c:CheckBox Id="discCheckbox" Checked="$ismarkup" CssClass="main_row"></c:CheckBox>
          <c:TextView Text="#discount#/#markUp#" CssClass="description_row"></c:TextView>
        </c:VerticalLayout>
        <c:VerticalLayout>
          <c:EditText Id="discountEdit" Text="$orderitem.Discount" CssClass="main_row" Keyboard="numeric"></c:EditText>
          <s:If Test="$ismarkup">
            <c:TextView Id="discTextView" Text="#markUp#" CssClass="description_row"></c:TextView>
          </s:If>
          <s:Else>
            <c:TextView Id="discTextView" Text="#discount#" CssClass="description_row"></c:TextView>
          </s:Else>
        </c:VerticalLayout>
        <c:VerticalLayout CssClass="quarter_width">
          <c:Button CssClass="btn_delete" OnClickAction="$Facade.DeleteItemAndBack($orderitem)"></c:Button>
        </c:VerticalLayout>
      </c:HorizontalLayout>
      <c:HorizontalLine/>


      
      <c:HorizontalLayout CssClass="header_edit_block">
        <c:VerticalLayout>
          <c:TextView Text="#features#" CssClass="caption_row"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>
      <c:HorizontalLine/>
           
      <s:Iterator Id="feature" Value="$features">

        <c:HorizontalLayout OnClickAction="$Facade.ChangeFeatureAndRefresh($orderitem, $feature, $sku, $price)">
          <c:VerticalLayout>
            <c:TextView Text="$feature.FeatureAsObject.Description" CssClass="main_row"></c:TextView>
          </c:VerticalLayout>
          <s:If Test="$orderitem.Feature==$feature.Feature">
            <c:Image CssClass="tick"/>
          </s:If>
        </c:HorizontalLayout>
        <c:HorizontalLine/>

      </s:Iterator>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>



