<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" xmlns:d="DefaultScope">

  <s:Push Id="order" Value="$param1"></s:Push>
  <s:Push Id="sku" Value="$param2"></s:Push>
  <s:Push Id="orderitem" Value="$param3"></s:Push>
  <s:Push Id="unit" Value="$param4"></s:Push>
  <s:Push Id="discValue" Value="$param5"></s:Push>
  <s:Push Id="multiplier" Value="$Facade.GetMultiplier($unit, $sku, $orderitem)"></s:Push>

  <s:Push Id="orderitem" Value="$Facade.CreateOrderItemIfNotExist($order.Id,$sku,$orderitem,$unit,$multiplier,$discValue)"></s:Push>
  <s:Push Id="discValue" Value="$orderitem.Discount"></s:Push>
  <s:Push Id="baseQty" Value="$Facade.CalculateValue($orderitem, $multiplier)"></s:Push>

  <c:VerticalLayout>

    <c:DockLayout CssClass="top_navigator">
      <c:Button CssClass="btn_back" OnEvent="Back" OnClickAction="$Workflow.DoBack()"/>
      <c:Button CssClass="btn_forward" OnEvent="Forward" OnClickAction="$Workflow.DoForward($order.OutletAsObject)"/>
      <c:TextView Text="#edit#" />
    </c:DockLayout>

    <c:ScrollView CssClass="grid">

      <c:HorizontalLayout CssClass="header_edit_block">
        <c:VerticalLayout CssClass="half_width"  OnClickAction="$Workflow.DoRefresh($order,$sku,$orderitem,$unit,$discount.Text)">
          <c:TextView Text="{$sku.Description}" CssClass="main_row"></c:TextView>
          <c:TextView Text="#refreshScreen#" CssClass="description_row"></c:TextView>
        </c:VerticalLayout>
        <c:VerticalLayout CssClass="half_width">
          <c:Button CssClass="btn_delete" OnClickAction="$Facade.DeleteItemAndBack($orderitem)"></c:Button>
        </c:VerticalLayout>
      </c:HorizontalLayout>

      <c:HorizontalLine/>

      <c:HorizontalLayout CssClass="cell">
        <c:VerticalLayout>
          <s:Push Id="orderItemTotal" Value="$Facade.FormatValue($orderitem.Total)"></s:Push>
          <c:TextView Text="$orderItemTotal" CssClass="main_row"></c:TextView>
          <c:TextView Text="#price#" CssClass="description_row"></c:TextView>
        </c:VerticalLayout>
        <c:VerticalLayout>
          <c:EditText Id="discount" Text="$discValue" CssClass="main_row"></c:EditText>
          <c:TextView Text="#discount#/#markUp#" CssClass="description_row"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>

      <c:HorizontalLine/>

      <c:HorizontalLayout  CssClass="cell">
        <c:VerticalLayout>
          <c:EditText Value="$orderitem.Qty" CssClass="main_row" Keyboard="numeric"></c:EditText>
          <c:TextView Text="#quantity#" CssClass="description_row"></c:TextView>
        </c:VerticalLayout>
        <c:VerticalLayout>
          <c:TextView Text="$orderitem.UnitsAsObject.Description" CssClass="main_row"></c:TextView>
          <c:TextView Text="#packUnit#" CssClass="description_row"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>

      <c:HorizontalLayout CssClass="cell">
        <c:VerticalLayout>
          <c:TextView Text="$baseQty" CssClass="main_row"></c:TextView>
          <c:TextView Text="#quantity#" CssClass="description_row"></c:TextView>
        </c:VerticalLayout>
        <c:VerticalLayout>
          <c:TextView Text="$sku.BaseUnitAsObject.Description" CssClass="main_row"></c:TextView>
          <c:TextView Text="#baseUnit#" CssClass="description_row"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>

      <c:HorizontalLine/>

      <c:HorizontalLayout CssClass="header_edit_block">
        <c:VerticalLayout>
          <c:TextView Text="#selectUnit#" CssClass="caption_row"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>
      <c:HorizontalLine/>

      <s:Push Id="units" Value="$Facade.GetUnits($sku.Id)"></s:Push>

      <s:Iterator Id="unit" Value="$units">

        <c:HorizontalLayout OnClickAction="$Workflow.DoRefresh($order,$sku,$orderitem,$unit)">
          <c:VerticalLayout>
            <c:TextView Text="$unit.PackAsObject.Description" CssClass="main_row"></c:TextView>
          </c:VerticalLayout>
          <c:Image/>
        </c:HorizontalLayout>

        <c:HorizontalLine/>

      </s:Iterator>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>



