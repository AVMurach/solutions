<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack">

  <s:Push Id="search" Value="$param1"></s:Push>

  <s:Push Id="skus" Value="$Facade.GetSKUs($search)"></s:Push>

  <s:Push Id="groups" Value="$Facade.GetSKUGroups($search)"></s:Push>

  <c:VerticalLayout>

    <c:DockLayout CssClass="top_navigator">
      <c:Button CssClass="btn_back" OnEvent="Back" OnClickAction="$Workflow.DoBack()"/>
      <c:Button CssClass="btn_forward" OnEvent="Forward" OnClickAction="$Workflow.DoBack()"/>
      <c:TextView Text="#stock#" />
    </c:DockLayout>

    <c:HorizontalLine/>

    <c:HorizontalLayout CssClass="search">

      <c:DockLayout >
        <c:Image />
        <c:EditText Id="edtSearch" Text="$search"></c:EditText>
      </c:DockLayout>
      <c:Button Text="#search#" OnClickAction="$Workflow.DoRefresh($edtSearch.Text)"></c:Button>

    </c:HorizontalLayout>

    <c:HorizontalLine/>

    <c:ScrollView CssClass="grid">

      <s:Iterator Id="group" Value="$groups">

        <s:Push Id="checkedGroup" Value="$Facade.checkSKUGroup($group.Id)"></s:Push>
        <s:If Test="$checkedGroup != 0">

          <c:HorizontalLayout CssClass ="blockEdit">
            <c:VerticalLayout>
              <c:TextView Text = "$group.Description" CssClass = "main_row"></c:TextView>
            </c:VerticalLayout>
          </c:HorizontalLayout>

          <c:HorizontalLine CssClass="editLine"/>

          <s:Push Id="skusByGroup" Value="$Facade.GetSKUs($search,$group.Id)"></s:Push>
          <s:Iterator Id="sku" Value="$skusByGroup">

            <c:HorizontalLayout>
              <c:VerticalLayout>
                <c:TextView Text="$sku.Description" CssClass="main_row"></c:TextView>
                <c:TextView Text="{$sku.Stock} {$sku.BaseUnitAsObject.Description}" CssClass="description_row"></c:TextView>
              </c:VerticalLayout>
            </c:HorizontalLayout>

            <c:HorizontalLine/>

          </s:Iterator>
        </s:If>
      </s:Iterator>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>