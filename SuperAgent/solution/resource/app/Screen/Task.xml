<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack">

  <s:Push Id="task" Value="$param1"></s:Push>

  <c:VerticalLayout>

    <c:DockLayout CssClass="top_navigator">
      <c:Button CssClass="btn_back" OnEvent="Back" OnClickAction="$Workflow.DoBack()"/>
      <c:Button CssClass="btn_forward" OnEvent="Back" OnClickAction="$Workflow.DoBack()"/>
      <c:TextView Text="#task#" />
    </c:DockLayout>

    <c:HorizontalLine/>

    <c:ScrollView CssClass="grid">

      <c:HorizontalLayout CssClass="text_block">
        <c:VerticalLayout>
          <c:TextView Text="$task.TextTask" CssClass="main_row"></c:TextView>
          <c:TextView Text="#description#" CssClass="description_row"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>

      <c:HorizontalLine/>

      <c:HorizontalLayout CssClass="text_block">
        <c:VerticalLayout>
          <c:TextView Text="$task.Target" CssClass="main_row"></c:TextView>
          <c:TextView Text="#task#" CssClass="description_row"></c:TextView>

        </c:VerticalLayout>

      </c:HorizontalLayout>

      <c:HorizontalLine/>

      <c:HorizontalLayout>
        <c:VerticalLayout>
          <c:TextView Text="$task.PlanDate" CssClass="main_row"></c:TextView>
          <c:TextView Text="#plandate#" CssClass="description_row"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>

      <c:HorizontalLine/>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>