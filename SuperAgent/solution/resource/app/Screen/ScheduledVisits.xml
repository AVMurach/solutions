<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack">

  <s:Push Id="search" Value="$param1"/>
  <s:Push Id="outlets" Value="$Facade.GetScheduledVisits($search)" />

  <c:VerticalLayout>

    <c:DockLayout CssClass="top_navigator">
      <c:Button CssClass="btn_back" OnEvent="Back" OnClickAction="$Workflow.DoBack()"/>
      <c:Button CssClass="btn_forward" OnEvent="Forward" />
      <c:TextView Text="#schedule#" />
    </c:DockLayout>

    <c:HorizontalLine/>

    <c:HorizontalLayout CssClass="search">

      <c:DockLayout >
        <c:Image />
        <c:EditText Id="edtSearch" Text="$search"></c:EditText>
      </c:DockLayout>
      <c:Button Text="#search#" OnClickAction="$Workflow.DoRefresh($edtSearch.Text)"></c:Button>

    </c:HorizontalLayout>

    <c:HorizontalLine/>

    <c:ScrollView CssClass="grid">

      <s:Iterator Id="outlet" Value="$outlets">

        <s:Push Id="planVisit" Value="$outlet.RefAsObject"></s:Push>
        <s:Push Id="planOutlet" Value="$outlet.OutletAsObject"></s:Push>
        <s:Push Id="todayVisit" Value="$Facade.GetTodayVisit($planOutlet)" />

        <s:If Test="$todayVisit==NULL">
          <c:HorizontalLayout OnClickAction="$Workflow.DoAction(Select,$planVisit,$planOutlet)">

            <c:VerticalLayout>
              <c:TextView Text="$planOutlet.Description" CssClass="main_row"></c:TextView>
              <c:TextView Text="$planOutlet.Address" CssClass="description_row"></c:TextView>
            </c:VerticalLayout>

            <c:Image/>

          </c:HorizontalLayout>

          <c:HorizontalLine/>
        </s:If>

        <s:Else>
          <c:HorizontalLayout OnClickAction="$Workflow.DoAction(Select,$planVisit,$planOutlet)">

            <c:VerticalLayout  CssClass="clipped">
              <c:TextView Text="$planOutlet.Description" CssClass="main_row"></c:TextView>
              <c:TextView Text="$planOutlet.Address" CssClass="description_row"></c:TextView>
            </c:VerticalLayout>

            <c:TextView Text="$todayVisit.Date.TimeString" CssClass="description_row"></c:TextView>

          </c:HorizontalLayout>

          <c:HorizontalLine/>
        </s:Else>

      </s:Iterator>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>