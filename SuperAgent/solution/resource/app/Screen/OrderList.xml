<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" xmlns:d="DefaultScope">

  <s:Push Id="search" Value="$param1"/>
  <s:Push Id ="orders" Value="$Facade.GetOrderList($search)"></s:Push>
  
  <c:VerticalLayout>

    <c:DockLayout CssClass="top_navigator">
      <c:Button Id="btnBack" CssClass="btn_back" OnEvent="Back" OnClickAction="$Workflow.DoRollback()"/>
      <c:Button Id="btnForward" CssClass="btn_grey_forward"/>
      <c:TextView Text="#orders#" />
    </c:DockLayout>

    <c:HorizontalLine/>

    <c:HorizontalLayout CssClass="search">
      <c:DockLayout >
        <c:Image />
        <c:EditText Id="edtSearch" Text="$search"></c:EditText>
      </c:DockLayout>
      <c:Button Id="btnSearch" Text="#search#" OnClickAction="$Workflow.DoRefresh($edtSearch.Text)"></c:Button>
    </c:HorizontalLayout>

    <c:VerticalLayout CssClass="header">
      <c:VerticalLayout  CssClass ="grid">
        <c:HorizontalLayout Id="NewOrder" OnEvent="Forward" OnClickAction="$Workflow.DoForward()">
          <c:VerticalLayout>
            <c:TextView Text="#newOrder#" CssClass="caption_row"></c:TextView>
          </c:VerticalLayout>
          <c:Image/>
        </c:HorizontalLayout>
      </c:VerticalLayout>
    </c:VerticalLayout>

    <c:HorizontalLine/>

    <c:ScrollView Id="grScrollView" CssClass="grid">

      <s:Iterator Id="order" Value="$orders">

        <s:Push Id="statusDescription" Value="$Facade.GetOrderStatus($order)"></s:Push>
        <s:If Test="$statusDescription == 'Сanceled'">
          <c:HorizontalLayout OnClickAction="$Workflow.DoAction(Select,$order.OutletAsObject,null,$order)">
            <c:VerticalLayout CssClass="red_mark"/>
            <c:VerticalLayout CssClass="clipped">
              <c:TextView Text="$order.OutletAsObject.Description" CssClass="main_row"></c:TextView>
              <s:Push Id="checkedNumber" Value ="$Facade.AssignNumberIfNotExist($order)"></s:Push>
              <s:If Test="$checkedNumber == 'noNumber'">
                <s:Push Id="checkedNumber" Value="#noNumber#"></s:Push>
              </s:If>
              <c:TextView Text="{$checkedNumber}, {$order.Date}" CssClass="description_row"></c:TextView>
            </c:VerticalLayout>
            <c:Image/>
          </c:HorizontalLayout>
          <c:HorizontalLine/>
        </s:If>
        <s:Else>
          <c:HorizontalLayout OnClickAction="$Workflow.DoAction(Select,$order.OutletAsObject,null,$order)">
            <c:VerticalLayout>
              <c:TextView Text="$order.OutletAsObject.Description" CssClass="main_row"></c:TextView>
              <s:Push Id="checkedNumber" Value ="$Facade.AssignNumberIfNotExist($order)"></s:Push>
              <s:If Test="$checkedNumber == 'noNumber'">
                <s:Push Id="checkedNumber" Value="#noNumber#"></s:Push>
              </s:If>
              <c:TextView Text="{$checkedNumber}, {$order.Date}" CssClass="description_row"></c:TextView>
            </c:VerticalLayout>
            <c:Image/>
          </c:HorizontalLayout>
          <c:HorizontalLine/>
        </s:Else>

      </s:Iterator>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>