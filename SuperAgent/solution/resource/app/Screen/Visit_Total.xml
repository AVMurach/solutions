<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack">

  <c:VerticalLayout>

    <c:DockLayout CssClass="top_navigator">
      <c:Button CssClass="btn_back" OnEvent="Back" OnClickAction="$Workflow.DoBack()"/>
      <c:Button CssClass="btn_forward" OnEvent="Forward" OnClickAction="$Facade.SetTimeAndCommit()"/>
      <c:TextView Text="#save#" />
    </c:DockLayout>
    <c:HorizontalLine/>

    <c:ScrollView CssClass="grid">

      <c:HorizontalLayout>
        <c:VerticalLayout>
          <c:TextView Text="$workflow.visit.OutletAsObject.Description" CssClass="main_row"></c:TextView>
          <c:TextView Text="$workflow.visit.OutletAsObject.Address" CssClass="description_row"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>
      <c:HorizontalLine/>

      <c:HorizontalLayout>
        <c:VerticalLayout>
          <c:TextView Text="$workflow.visit.StartTime" CssClass="main_row"></c:TextView>
          <c:TextView Text="#startTime#" CssClass="description_row"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>
      <c:HorizontalLine/>

      <c:HorizontalLayout>
        <c:VerticalLayout>
          <s:Push Id="questions" Value="$Facade.CountEntities(Document, Visit_Questions, $workflow.visit.Id, Ref)"></s:Push>
          <c:TextView Text="{$questions} of {$workflow.questions_qty}" CssClass="main_row"></c:TextView>
          <c:TextView Text="#questions#" CssClass="description_row"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>
      <c:HorizontalLine/>

      <c:HorizontalLayout>
        <c:VerticalLayout>
          <c:TextView Text="{$workflow.sku_answ} of {$workflow.sku_qty}" CssClass="main_row"></c:TextView>
          <c:TextView Text="#sku# #questions#" CssClass="description_row"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>
      <c:HorizontalLine/>      

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>



