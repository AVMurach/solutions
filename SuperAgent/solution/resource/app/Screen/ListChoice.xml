<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack">

  <s:If Test="$param3 == null">
    <s:Push Id="items" Value="$Facade.GetLookupList($param1,$param2)"></s:Push>
  </s:If>
  <s:Else>
    <s:If Test="$param3=='Order'">
      <s:Push Id="items" Value="$Facade.GetpriceLists($workflow.order)"></s:Push>
    </s:If>
    <s:Else>
      <s:If Test="$param3=='Visit_Questions'">
        <s:Push Id="items" Value="$Facade.GetValueList()"></s:Push>
      </s:If>
    </s:Else>
  </s:Else>
  

  <s:Push Value="$param1.Metadata.{$param2}.Name" Id="objectName"/>

  <c:VerticalLayout>

    <c:DockLayout CssClass="top_navigator">
      <c:Button Id="btnBack" CssClass="btn_back" OnEvent="Back" OnClickAction="$Workflow.DoBack()"/>
      <c:Button Id="btnForward" CssClass="btn_forward" OnEvent="Forward" OnClickAction="$Workflow.DoBack()" />
      <c:TextView Text="#parameters#" />
    </c:DockLayout>

    <c:HorizontalLine/>

    <c:VerticalLayout CssClass="header">
      <c:VerticalLayout CssClass="grid">
        <c:HorizontalLayout>
          <c:VerticalLayout CssClass="header_edit_block">
            <s:If Test="$param2=='Distributor'">
              <c:TextView CssClass="main_row" Text="#distributor#"/>
            </s:If>
            <s:Else>
              <s:If Test="$objectName=='OutletType'">
                <c:TextView CssClass="main_row" Text="#outletType#"/>
              </s:If>
              <s:Else>
                <s:If Test="$objectName=='OutletClass'">
                  <c:TextView CssClass="main_row" Text="#outletClass#"/>
                </s:If>
                <s:Else>
                  <s:If Test="$objectName=='PriceList'">
                    <c:TextView CssClass="main_row" Text="#priceList#"/>
                  </s:If>
                </s:Else>
              </s:Else>
            </s:Else>

            <c:TextView Text="#select_answer#" CssClass="description_row"></c:TextView>
          </c:VerticalLayout>
        </c:HorizontalLayout>
      </c:VerticalLayout>
    </c:VerticalLayout>

    <c:HorizontalLine/>

    <c:ScrollView Id="grScrollView" CssClass="grid">

      <s:Iterator Id="item" Value="$items">

        <s:If Test="$param3 == null">
          <s:Push Id="itemId" Value="$item.Id"></s:Push>
        </s:If>
        <s:Else>
          <s:If Test="$param3=='Order'">
            <s:Push Id="itemId" Value="$item.PriceListAsObject.Id"></s:Push>
          </s:If>
          <s:Else>
            <s:If Test="$param3=='Visit_Questions'">
              <s:Push Id="items" Value="$param3"></s:Push>
            </s:If>
          </s:Else>
        </s:Else>

        <c:HorizontalLayout OnClickAction="$Facade.UpdateValueAndBack($param1,$param2,$itemId)">
          <c:VerticalLayout>
            <s:If Test="$param3 == null">
              <c:TextView Text="$item.Description" CssClass="main_row"></c:TextView>
            </s:If>
            <s:Else>              
              <s:If Test="$param3=='Order'">
                <c:TextView Text="$item.PriceListAsObject.Description" CssClass="main_row"></c:TextView>
              </s:If>
              <s:Else>
                <s:If Test="$param3=='Visit_Questions'">
                  <s:Push Id="items" Value="$param3"></s:Push>
                </s:If>
              </s:Else>
            </s:Else>
          </c:VerticalLayout>
          <c:Image/>
        </c:HorizontalLayout>

        <c:HorizontalLine/>

      </s:Iterator>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>



