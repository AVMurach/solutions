<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" xmlns:d="DefaultScope">

  <s:Push Id="outlet" Value="$param1"></s:Push>
  <s:Push Id="executedOrder" Value="$param3"></s:Push>

  <s:Push Id="workflow.order" Value ="$Facade.CreateOrderIfNotExists($workflow.order, $outlet, $common.UserId, $workflow.visit.Id, $executedOrder)"></s:Push>

  <s:Push Id="items" Value="$Facade.GetOrderedSKUs($workflow.order.Id)"></s:Push>
  <s:Push Id="qty" Value="$Facade.GetOrderQTY($workflow.order.Id)"></s:Push>
  <s:Push Id="sum" Value="$Facade.GetOrderSUM($workflow.order.Id)"></s:Push>
  <s:Push Id="maxAmount" Value="$Facade.GetMaxOrderAmount($workflow.order.OutletAsObject)"></s:Push>
  <s:Push Id="greater" Value="$Facade.GetGreater($sum,$maxAmount)"></s:Push>

  <c:VerticalLayout>

    <c:DockLayout CssClass="top_navigator">
      <c:Button Id="btnBack" CssClass="btn_back" OnEvent="Back" OnClickAction="$Workflow.DoRollback()"/>
      <c:Button Id="btnForward" CssClass="btn_forward" OnEvent="Forward" OnClickAction="$Workflow.DoForward($workflow.order)"/>
      <c:TextView Text="#order#" />
    </c:DockLayout>
    <c:HorizontalLine/>



    <s:Push Id="statusDescription" Value="$Facade.GetOrderStatus($workflow.order)"></s:Push>
    <s:If Test="$statusDescription == 'New'">
      <s:If Test="$workflow.order.PriceListAsRef != null">
        <c:VerticalLayout CssClass="header">
          <c:VerticalLayout  CssClass ="grid">
            <c:HorizontalLayout Id="Orderadd" OnClickAction="$Workflow.DoAction(Add,$workflow.order)">
              <c:VerticalLayout CssClass="half_width">
                <s:If Test="$greater==True">
                  <c:TextView Text="$sum" CssClass="main_row"></c:TextView>
                </s:If>
                <s:Else>
                  <s:If Test="$maxAmount == 0">
                    <c:TextView Text="$sum" CssClass="main_row"></c:TextView>
                  </s:If>
                  <s:Else>
                    <c:TextView Text="$sum" CssClass="warning_row"></c:TextView>
                  </s:Else>
                </s:Else>
                <c:TextView Text="#totalamount#" CssClass="description_row"></c:TextView>
              </c:VerticalLayout>
              <c:VerticalLayout CssClass="half_width">
                <s:If Test="$maxAmount == 0">
                  <c:TextView Text="#NoLimit#" CssClass="main_row"></c:TextView>
                </s:If>
                <s:Else>
                  <c:TextView Text="$maxAmount" CssClass="main_row"></c:TextView>
                </s:Else>
                <c:TextView Text="#maximumAmount#" CssClass="description_row"></c:TextView>
              </c:VerticalLayout>
              <c:Image/>
            </c:HorizontalLayout>
          </c:VerticalLayout>
        </c:VerticalLayout>

        <c:HorizontalLine/>
      </s:If>



      <c:ScrollView Id="grScrollView" CssClass="grid">

        <c:HorizontalLayout OnClickAction="$Workflow.DoAction(EditPriceList, $workflow.order, PriceList)">
          <c:VerticalLayout>
            <s:If Test="$workflow.order.PriceListAsRef != null">
              <c:TextView Text="$workflow.order.PriceListAsObject.Description" CssClass="main_row"></c:TextView>
            </s:If>
            <s:Else>
              <s:Push Id="priceLists" Value="$Facade.CountEntities(Catalog, Outlet_Prices, $workflow.order.Outlet, Ref)"></s:Push>
              <s:If Test="$priceLists == 0">
                <c:TextView Text="#noPriceLists#" CssClass="main_row"></c:TextView>
              </s:If>
              <s:Else>
                <c:TextView Text="#isntSelected#" CssClass="main_row"></c:TextView>
              </s:Else>
            </s:Else>       
            <c:TextView Text="#priceList#" CssClass="description_row"></c:TextView>
          </c:VerticalLayout>
          <c:Image/>
        </c:HorizontalLayout>
        <c:HorizontalLine/>



        <s:Iterator Id="orderitem" Value="$items">
          <s:Push Id="orderitem" Value="$Facade.DeleteZeroItem($orderitem)"></s:Push>

          <s:If Test="$orderitem != null">
            <c:HorizontalLayout OnClickAction="$Workflow.DoAction(Edit,$orderitem.SKUAsObject,null,null,$orderitem)">
              <c:VerticalLayout>
                <c:TextView Text="{$orderitem.SKUAsObject.Description}, {$orderitem.FeatureAsObject.Description}" CssClass="main_row"></c:TextView>
                <s:Push Value="$Facade.GetSKUAmount($workflow.order.Id, $orderitem)" Id="amount"/>
                <c:TextView Text="#quantity#: {$orderitem.Qty}   #amount#: {$amount}" CssClass="description_row"></c:TextView>
              </c:VerticalLayout>
              <c:Image/>
            </c:HorizontalLayout>
            <c:HorizontalLine/>
          </s:If>

        </s:Iterator>

      </c:ScrollView>
    </s:If>

    <s:Else>
      <c:VerticalLayout CssClass="header">
        <c:VerticalLayout  CssClass ="grid">
          <c:HorizontalLayout Id="OrderAdd">
            <c:VerticalLayout>
              <c:TextView Text="$sum" CssClass="main_row"></c:TextView>
              <c:TextView Text="#totalamount#" CssClass="description_row"></c:TextView>
            </c:VerticalLayout>
            <c:Image/>
          </c:HorizontalLayout>
        </c:VerticalLayout>
      </c:VerticalLayout>

      <c:HorizontalLine/>

      <c:ScrollView Id="grScrollView" CssClass="grid">

        <c:HorizontalLayout>
          <c:VerticalLayout>
            <c:TextView Text="$order.PriceListAsObject.Description" CssClass="main_row"></c:TextView>
          </c:VerticalLayout>
        </c:HorizontalLayout>
        <c:HorizontalLine/>

        <s:Iterator Id="orderitem" Value="$items">

          <c:HorizontalLayout>

            <c:VerticalLayout>
              <c:TextView Text="$orderitem.SKUAsObject.Description" CssClass="main_row"></c:TextView>
              <s:Push Value="$Facade.GetSKUAmount($workflow.order.Id, $orderitem)" Id="amount"/>
              <c:TextView Text="#quantity#: {$orderitem.Qty}   #amount#: {$amount}" CssClass="description_row"></c:TextView>
            </c:VerticalLayout>

            <c:Image/>

          </c:HorizontalLayout>

          <c:HorizontalLine/>
        </s:Iterator>



      </c:ScrollView>
    </s:Else>

  </c:VerticalLayout>

</c:Screen>