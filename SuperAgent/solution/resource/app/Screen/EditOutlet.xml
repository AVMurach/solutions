<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" xmlns:d="DefaultScope">

  <s:Push Id="outlet" Value="$param1"></s:Push>

  <c:VerticalLayout>

    <c:DockLayout CssClass="top_navigator">
      <c:Button CssClass="btn_back" OnEvent="Back" OnClickAction="$Workflow.DoRollback()"/>
      <c:Button CssClass="btn_forward" OnEvent="Forward" OnClickAction="$Facade.CheckNotNullAndCommit($outlet)"/>
      <c:TextView Text="#outlet#" />
    </c:DockLayout>

    <c:HorizontalLine/>

    <c:ScrollView CssClass="grid">

      <c:HorizontalLayout CssClass="header_edit_block">
        <c:VerticalLayout CssClass="header_edit_block">
          <c:EditText Id="outletDescr" Value="$outlet.Description" CssClass="main_row"></c:EditText>
          <c:TextView Text="#description#" CssClass="description_row"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>
      <c:HorizontalLine/>

      <c:HorizontalLayout>
        <c:VerticalLayout>
          <c:EditText Id="outletAddress" Value="$outlet.Address" CssClass="main_row"></c:EditText>
          <c:TextView Text="#address#" CssClass="description_row"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>
      <c:HorizontalLine/>

      <c:HorizontalLayout OnClickAction="$Workflow.DoAction(ShowMap, $outlet)">
        <c:VerticalLayout>
          <c:TextView Text="#showOnMap#" CssClass="main_row"></c:TextView>
        </c:VerticalLayout>
        <c:Image/>
      </c:HorizontalLayout>
      <c:HorizontalLine/>

      <c:HorizontalLayout OnClickAction="$Workflow.DoAction(EditParameter,$outlet,Class)">
        <c:VerticalLayout>
          <c:TextView Id="outletClass" Text="$outlet.ClassAsObject.Description" CssClass="main_row"></c:TextView>
          <c:TextView Text="#outlet_class#" CssClass="description_row"></c:TextView>
        </c:VerticalLayout>
        <c:Image/>
      </c:HorizontalLayout>
      <c:HorizontalLine/>

      <c:HorizontalLayout OnClickAction="$Workflow.DoAction(EditParameter,$outlet,Type)">
        <c:VerticalLayout>
          <c:TextView Id="outletType" Text="$outlet.TypeAsObject.Description" CssClass="main_row"></c:TextView>
          <c:TextView Text="#outlet_type#" CssClass="description_row"></c:TextView>
        </c:VerticalLayout>
        <c:Image/>
      </c:HorizontalLayout>
      <c:HorizontalLine/>

      <c:HorizontalLayout OnClickAction="$Workflow.DoAction(EditParameter,$outlet,Distributor)">
        <c:VerticalLayout>
          <c:TextView Id="outletDistr" Text="$outlet.DistributorAsObject.Description" CssClass="main_row"></c:TextView>
          <c:TextView Text="#distributor#" CssClass="description_row"></c:TextView>
        </c:VerticalLayout>
        <c:Image/>
      </c:HorizontalLayout>
      <c:HorizontalLine/>

      <s:Iterator Id="parameter" Value="$Facade.GetOutletParameters()">

        <s:Push Id="parameterValue" Value="$Facade.GetOutletParameterValue($outlet,$parameter)"/>

        <c:HorizontalLayout OnClickAction="$Workflow.DoAction(EditAddParameter,$outlet,$parameter,$parameterValue)">

          <c:VerticalLayout>
            <s:If Test="$parameterValue!=null">
              <s:If Test="$parameter.DataTypeAsObject.Description=='Boolean'">
                <s:If Test="$parameterValue.Value == 'True'">
                  <c:TextView CssClass="main_row" Text="#true#"/>
                </s:If>
                <s:Else>
                  <c:TextView CssClass="main_row" Text="#false#"/>
                </s:Else>
              </s:If>
              <s:Else>
                <c:TextView CssClass="main_row" Text="$parameterValue.Value"/>
              </s:Else>
            </s:If>
            <s:Else>
              <c:TextView Text="?" CssClass="main_row"></c:TextView>
            </s:Else>
            <c:TextView Text="$parameter.Description" CssClass="description_row"></c:TextView>
          </c:VerticalLayout>
          <c:Image/>

        </c:HorizontalLayout>

        <c:HorizontalLine/>

      </s:Iterator>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>



