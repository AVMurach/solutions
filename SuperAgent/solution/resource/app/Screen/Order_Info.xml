<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" xmlns:d="DefaultScope">

  <s:Push Id="order" Value="$workflow.order"></s:Push>
  <s:Push Id="sum" Value="$param1"></s:Push>
  <s:Push Id="priceLists" Value="$Facade.GetPriceListQty($order.Outlet)"></s:Push>

  <c:VerticalLayout>

    <c:DockLayout CssClass="top_navigator">
      <c:Button Id="btnBack" CssClass="btn_back" OnEvent="Back" OnClickAction="$Workflow.DoBack()"/>
      <c:Button Id="btnForward" CssClass="btn_forward" OnEvent="Forward" OnClickAction="$Workflow.DoBack()"/>
      <c:TextView Text="#information#" />
    </c:DockLayout>

    <c:ScrollView Id="grScrollView" CssClass="grid">

      <c:HorizontalLayout>
        <c:VerticalLayout>
          <c:TextView Text="$sum" CssClass="main_row"></c:TextView>
          <c:TextView Text="#totalamount#" CssClass="description_row"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>
      <c:HorizontalLine/>

        <c:HorizontalLayout OnClickAction="$Facade.PriceListAction($workflow.order, $priceLists)">
          <c:VerticalLayout>
            <s:If Test="$workflow.order.PriceListAsRef != null">
              <c:TextView Text="$workflow.order.PriceListAsObject.Description" CssClass="main_row"></c:TextView>

            </s:If>
            <s:Else>
              <s:If Test="$priceLists == 0">
                <c:TextView Text="#noPriceLists#" CssClass="main_row"></c:TextView>

              </s:If>
              <s:Else>
                <c:TextView Text="#isntSelected#" CssClass="main_row"></c:TextView>

              </s:Else>

            </s:Else>
            <c:TextView Text="#priceList#" CssClass="description_row"></c:TextView>

          </c:VerticalLayout>
          <s:If Test="$priceLists != 0">
            <c:Image/>

          </s:If>

        </c:HorizontalLayout>
        <c:HorizontalLine/>


    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>



