<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack">

  <s:Push Id="sku" Value="$param1"></s:Push>
  <s:Push Id="price" Value="$param3"></s:Push>

  <s:Push Id="features" Value="$Facade.GetFeatures($sku.Id)"></s:Push>

  <c:VerticalLayout>

    <c:DockLayout CssClass="top_navigator">
      <c:Button Id="btnBack" CssClass="btn_back" OnEvent="Back" OnClickAction="$Workflow.DoBack()"/>
      <c:Button Id="btnForward" CssClass="btn_grey_forward" OnEvent="Forward"/>
      <c:TextView Text="#features#" />
    </c:DockLayout>
    <c:HorizontalLine/>

    <c:ScrollView Id="grScrollView" CssClass="grid">
      <s:Iterator Id="feature" Value="$features">

        <c:HorizontalLayout OnClickAction="$Workflow.DoAction(Select, $sku, $feature, $price)">
          <c:VerticalLayout>
            <c:TextView Text = "$feature.FeatureAsObject.Description" CssClass = "main_row"></c:TextView>
            <c:TextView Text = "#stock#: {$feature.StockValue}" CssClass = "description_row"></c:TextView>
          </c:VerticalLayout>
          <c:Image/>
        </c:HorizontalLayout>
        <c:HorizontalLine CssClass="editLine"/>

      </s:Iterator>
    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>