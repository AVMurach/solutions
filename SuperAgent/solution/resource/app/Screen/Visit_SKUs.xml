<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack">

  <s:Push Id="outlet" Value="$workflow.outlet"></s:Push>
  <s:Push Id="visit" Value="$workflow.visit"></s:Push>
  <s:Push Id="questions" Value="$Facade.GetSKUsByOutlet($workflow.questionnaires)"></s:Push>

  <s:Push Id="workflow.sku_qty" Value="0"></s:Push>

  <s:Push Id="workflow.sku_answ" Value="$Facade.ToInteger(0);"></s:Push>

  <c:VerticalLayout>

    <c:DockLayout CssClass="top_navigator">
      <c:Button Id="btnBack" CssClass="btn_back" OnEvent="Back" OnClickAction="$Workflow.DoBack()"/>
      <c:Button Id="btnForward" CssClass="btn_forward" OnEvent="Forward" OnClickAction="$Workflow.DoForward($outlet,$visit)"/>
      <c:TextView Text="#sku#" />
    </c:DockLayout>

    <c:HorizontalLine/>

    <c:ScrollView Id="grScrollView" CssClass="grid">

      <s:If Test="$questions==null">

        <c:HorizontalLayout>
          <c:VerticalLayout>
            <c:TextView Text="#no_questions#" CssClass="main_row"></c:TextView>
          </c:VerticalLayout>
        </c:HorizontalLayout>

      </s:If>
      <s:Else>

        <s:Iterator Id="item" Value="$questions">
          <s:Push Id="sku" Value="$item.SKUAsObject"/>
          <s:Push Id="skuValue" Value="$Facade.GetVisitSKUValue($visit,$sku)"/>
          <s:Push Id="sku_qty" Value="$Facade.GetSKUQty($questions, $workflow.questionnaires, $sku)"></s:Push>
          <s:Push Id="sku_answered" Value="$Facade.GetSKUAnswers($visit, $sku)"></s:Push>

          <c:HorizontalLayout OnClickAction="$Workflow.DoAction(Edit,$outlet,$visit,$sku,$skuValue,$workflow.questionnaires)">

            <c:VerticalLayout>
              <c:TextView Text="{$sku_answered} #of# {$sku_qty}" CssClass="main_row"/>
              <c:TextView Text="$sku.Description" CssClass="description_row"></c:TextView>
            </c:VerticalLayout>

            <c:Image/>

          </c:HorizontalLayout>

          <c:HorizontalLine/>
        </s:Iterator>

      </s:Else>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>
