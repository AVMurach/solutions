<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack">

  <s:Push Id="search" Value="$param1"/>
  <s:Push Id="outlets" Value="$Facade.GetOutlets($search)"></s:Push>

  <c:VerticalLayout>

    <c:DockLayout CssClass="top_navigator">
      <c:Button Id="btnBack" CssClass="btn_back" OnEvent="Back" OnClickAction="$Workflow.DoRollback()"/>
      <c:Button Id="btnForward" CssClass="btn_grey_forward" OnEvent="Forward"/>
      <c:TextView Text="#outlets#" />
    </c:DockLayout>

    <c:HorizontalLine/>

    <c:HorizontalLayout CssClass="search">

      <c:DockLayout >
        <c:Image />
        <c:EditText Id="edtSearch" Text="$search"></c:EditText>
      </c:DockLayout>
      <c:Button Id="btnSearch" Text="#search#" OnClickAction="$Workflow.DoRefresh($edtSearch.Text)"></c:Button>

    </c:HorizontalLayout>

    <c:HorizontalLine/>

    <s:If Test="$workflow.name=='Outlets'">
      <c:VerticalLayout Id="NewOutlet" CssClass="header">
        <c:VerticalLayout  CssClass ="grid">
          <c:HorizontalLayout OnEvent="Forward" OnClickAction="$Facade.CreateAndForward()">
            <c:VerticalLayout>
              <c:TextView Text="#newOutlet#" CssClass="caption_row"></c:TextView>
            </c:VerticalLayout>
            <c:Image CssClass="add_img"/>
          </c:HorizontalLayout>
        </c:VerticalLayout>
      </c:VerticalLayout>

      <c:HorizontalLine/>
    </s:If>

    <c:ScrollView Id="grScrollView" CssClass="grid">

      <s:Iterator Id="outlet" Value="$outlets">
        <s:Push Id="debt" Value="$Facade.GetDebt($outlet.Id)"></s:Push>

        <c:HorizontalLayout OnClickAction="$Workflow.DoAction(Select,$outlet)">
          <s:If Test="$outlet.ConfirmationStatusAsObject.Description == 'New'">
            <c:VerticalLayout CssClass="blue_mark"/>
            <c:VerticalLayout CssClass="clipped">
              <c:TextView Text="$outlet.Description" CssClass="main_row"></c:TextView>
              <c:HorizontalLayout>                
                <s:If Test="$debt!=0">
                  <c:TextView Text="$outlet.Address" CssClass="left_description_row"></c:TextView>
                  <c:TextView Text="#debt#: {$debt}" CssClass="right_description_row"></c:TextView>
                </s:If>
                <s:Else>
                  <c:TextView Text="$outlet.Address" CssClass="description_row"></c:TextView>
                </s:Else>
              </c:HorizontalLayout>
            </c:VerticalLayout>
          </s:If>
          <s:Else>
            <c:VerticalLayout>
              <c:TextView Text="$outlet.Description" CssClass="main_row"></c:TextView>
              <c:HorizontalLayout>
                <s:If Test="$debt!=0">
                  <c:TextView Text="$outlet.Address" CssClass="left_description_row"></c:TextView>
                  <c:TextView Text="#debt#: {$debt}" CssClass="right_description_row"></c:TextView>
                </s:If>
                <s:Else>
                  <c:TextView Text="$outlet.Address" CssClass="description_row"></c:TextView>
                </s:Else>
              </c:HorizontalLayout>
            </c:VerticalLayout>
          </s:Else>
          <c:Image/>
        </c:HorizontalLayout>

        <c:HorizontalLine/>
      </s:Iterator>

    </c:ScrollView>

  </c:VerticalLayout>


</c:Screen>