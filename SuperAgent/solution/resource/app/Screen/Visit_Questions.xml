<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack">

  <s:Push Id="outlet" Value="$param1"></s:Push>
  <s:Push Id="visit" Value="$param2"></s:Push>
  <s:Push Id="workflow.questions_qty" Value="$Facade.ToFloat(0)"></s:Push>
  
  <s:Push Id="questionnaires" Value="$Facade.GetQuesttionaires($outlet)"></s:Push>
  <s:Push Id="questions" Value="$Facade.GetQuestionsByOutlet($questionnaires)"></s:Push>

  <c:VerticalLayout>

    <c:DockLayout CssClass="top_navigator">
      <c:Button CssClass="btn_back" OnEvent="Back" OnClickAction="$Workflow.DoBack()"/>
      <c:Button CssClass="btn_forward" OnEvent="Forward" OnClickAction="$Workflow.DoForward($outlet,$visit,$questionnaires)"/>
      <c:TextView Text="#questions#" />
    </c:DockLayout>

    <c:HorizontalLine/>

    <c:ScrollView CssClass="grid">

      <s:If Test="$questions==null">

        <c:HorizontalLayout>
          <c:VerticalLayout>
            <c:TextView Text="#no_questions#" CssClass="main_row"></c:TextView>
          </c:VerticalLayout>
        </c:HorizontalLayout>

      </s:If>
      
      <s:Else>

        <s:Iterator Id="item" Value="$questions">

          <s:Push Id="workflow.questions_qty" Value="$Facade.GetSum($workflow.questions_qty, 1)"></s:Push>
          <s:Push Id="question" Value="$item.QuestionAsObject"/>
          <s:Push Id="questionValue" Value="$Facade.GetVisitQuestionValue($visit,$question)"/>

          <c:HorizontalLayout OnClickAction="$Workflow.DoAction(Edit,$outlet,$visit,$question,$questionValue)">

            <c:VerticalLayout>
              <s:If Test="$questionValue!=null">
                <s:If Test="$question.AnswerTypeAsObject.Description=='Boolean'">
                  <s:If Test = "$questionValue.Answer == 'True'">
                    <c:TextView Text="#true#" CssClass="main_row"></c:TextView>
                  </s:If>
                  <s:Else>
                    <c:TextView Text="#false#" CssClass="main_row"></c:TextView>
                  </s:Else>
                </s:If>
                <s:Else>
                  <c:TextView Text="$questionValue.Answer" CssClass="main_row"></c:TextView>
                </s:Else>
              </s:If>
              <s:Else>
                <c:TextView Text="?" CssClass="main_row"></c:TextView>
              </s:Else>
              <c:TextView Text="$question.Description" CssClass="description_row"></c:TextView>
            </c:VerticalLayout>

            <c:Image/>

          </c:HorizontalLayout>

          <c:HorizontalLine/>
        </s:Iterator>

      </s:Else>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>