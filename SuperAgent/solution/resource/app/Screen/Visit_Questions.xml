<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack">

  <s:Push Id="outlet" Value="$workflow.outlet"></s:Push>
  <s:Push Id="visit" Value="$workflow.visit"></s:Push>
  <s:Push Id="workflow.questions_qty" Value="$Facade.ToFloat(0)"></s:Push>

  <s:Push Id="questions" Value="$Facade.GetQuestionsByOutlet($workflow.questionnaires)"></s:Push>

  <c:VerticalLayout>

    <c:DockLayout CssClass="top_navigator">
      <c:Button Id="btnBack" CssClass="btn_back" OnEvent="Back" OnClickAction="$Workflow.DoBack()"/>
      <c:Button Id="btnForward" CssClass="btn_forward" OnEvent="Forward" OnClickAction="$Facade.CheckEmptyQuestionsAndForward($workflow.questionnaires, $visit)"/>
      <c:TextView Text="#questions#" />
    </c:DockLayout>

    <c:HorizontalLine/>

    <c:ScrollView Id="grScrollView" CssClass="grid">

      <s:If Test="$questions==null">

        <c:HorizontalLayout>
          <c:VerticalLayout>
            <c:TextView Text="#no_questions#" CssClass="main_row"></c:TextView>
          </c:VerticalLayout>
        </c:HorizontalLayout>

      </s:If>

      <s:Else>

        <s:Iterator Id="item" Value="$questions">

          <s:Push Id="workflow.questions_qty" Value="$Facade.GetSum($workflow.questions_qty, 1)"></s:Push>
          <s:Push Id="question" Value="$Facade.GetObject($item)"/>
          <s:Push Id="questionValue" Value="$Facade.CreateVisitQuestionValueIfNotExists($visit,$question,$questionValue)"></s:Push>

          <c:HorizontalLayout>
            <c:VerticalLayout>
              <c:TextView Text="$question.Description" CssClass="purple_row"></c:TextView>
            </c:VerticalLayout>
          </c:HorizontalLayout>

          <c:HorizontalLayout OnClickAction="$Facade.GoToQuestionAction($question.AnswerTypeAsObject.Description, $questionValue, $visit)">


            <s:If Test="$question.AnswerTypeAsObject.Description=='Boolean'">
              <c:VerticalLayout CssClass="answerfield" OnClickAction="$Facade.AssignBooleanValue($questionValue, Answer, true)">
                <c:TextView Text="$questionValue.Answer" CssClass="center_caption"></c:TextView>
              </c:VerticalLayout>
              <c:VerticalLayout CssClass="header" OnClickAction="$Facade.AssignBooleanValue($questionValue, Answer, true)">
                <c:TextView Text="#YES#" CssClass="center_caption"></c:TextView>
              </c:VerticalLayout>
              <c:VerticalLayout CssClass="white">                
              </c:VerticalLayout>
              <c:VerticalLayout CssClass="header" OnClickAction="$Facade.AssignBooleanValue($questionValue, Answer, false)">
                <c:TextView Text="#NO#" CssClass="center_caption"></c:TextView>
              </c:VerticalLayout>
            </s:If>

            <s:If Test="$question.AnswerTypeAsObject.Description=='Integer'">
              <c:VerticalLayout>
                <c:EditText Value="$questionValue.Answer" CssClass="main_row" Keyboard="numeric"></c:EditText>
              </c:VerticalLayout>
            </s:If>

            <s:If Test="$question.AnswerTypeAsObject.Description=='Decimal'">
              <c:VerticalLayout>
                <c:EditText Value="$questionValue.Answer" CssClass="main_row" Keyboard="numeric"></c:EditText>
              </c:VerticalLayout>
            </s:If>

            <s:If Test="$question.AnswerTypeAsObject.Description=='ValueList'">
              <s:If Test="$questionValue.Answer==''">
                <c:VerticalLayout>
                  <c:TextView Text="#select_answer#" CssClass="main_row"></c:TextView>
                </c:VerticalLayout>
              </s:If>
              <c:VerticalLayout>
                <c:TextView Text="$questionValue.Answer" CssClass="main_row"></c:TextView>
              </c:VerticalLayout>
            </s:If>

            <s:If Test="$question.AnswerTypeAsObject.Description=='Snapshot'">
              <c:VerticalLayout CssClass="half_width">
                <c:Image CssClass="snapshot"></c:Image>
              </c:VerticalLayout>
              <c:VerticalLayout CssClass="half_width">
                <s:Push Id="snapshotText" Value="$Facade.GetSnapshotText($questionValue.Answer)"></s:Push>
                <c:TextView Id="snapshotInfo" Text="$snapshotText" CssClass="description_row"></c:TextView>
              </c:VerticalLayout>
            </s:If>

            <s:If Test="$question.AnswerTypeAsObject.Description=='String'">
              <c:VerticalLayout>
                <c:EditText Value="$questionValue.Answer" CssClass="main_row"></c:EditText>
              </c:VerticalLayout>
            </s:If>

            <s:If Test="$question.AnswerTypeAsObject.Description=='DateTime'">
              <c:VerticalLayout>
                <s:If Test="$Facade.IsNullOrEmpty($questionValue.Answer)">
                  <s:Push Id="answerValue" Value="#clickToInsert#"></s:Push>
                </s:If>
                <s:Else>
                  <s:Push Id="answerValue" Value="$questionValue.Answer"></s:Push>
                </s:Else>
                <c:TextView Id="dateTimeText" Text="$answerValue" CssClass="main_row"></c:TextView>
              </c:VerticalLayout>
            </s:If>

            <s:If Test="$question.AnswerTypeAsObject.Description=='ValueList'">
              <c:Image/>
            </s:If>

          </c:HorizontalLayout>

          <c:HorizontalLine/>
        </s:Iterator>

      </s:Else>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>