<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" xmlns:d="DefaultScope">

  <s:Push Id="outlet" Value="$param1"></s:Push>
  <s:Push Id="visit" Value="$param2"></s:Push>
  <s:Push Id="sku" Value="$param3"></s:Push>
  <s:Push Id="questionnaire" Value="$param5"></s:Push>
  <s:Push Id="skuValue" Value="$CreateVisitSKUValueIfNotExists($visit,$sku,$param4)"></s:Push>

  <c:DockLayout>

    <c:HorizontalLayout CssClass="bottom_btn" OnEvent="Back" OnClickAction="$SaveAndBack($skuValue)">
      <c:TextView Text="#ready#"></c:TextView>
    </c:HorizontalLayout>
    <c:HorizontalLine CssClass="b_line"></c:HorizontalLine>

    <c:HorizontalLayout CssClass="margin_top"></c:HorizontalLayout>
    <c:HorizontalLine/>
    
    <c:ScrollView Id="grScrollView">
      <s:Push Id="useInQuestionnaire" Value="$CheckQuestionExistence($questionnaire, Available, $sku)"></s:Push>
      <s:If Test="$useInQuestionnaire">
        <c:HorizontalLayout  CssClass="grid">
          <c:VerticalLayout OnClickAction="$GoToQuestionAction(Boolean, $skuValue, $visit, cAvailable, Available)">
            <c:TextView Text="#available#" CssClass="description_row"></c:TextView>
            <c:TextView Id="cAvailable" Text="$skuValue.Available" CssClass="yes_TextView"></c:TextView>
          </c:VerticalLayout>
        </c:HorizontalLayout>
        <c:HorizontalLine/>
      </s:If>

      <s:Push Id="useInQuestionnaire" Value="$CheckQuestionExistence($questionnaire, Facing, $sku)"></s:Push>
      <s:If Test="$useInQuestionnaire">
        <c:HorizontalLayout CssClass="grid">
          <c:VerticalLayout>
            <c:TextView Text="#facing#" CssClass="description_row"></c:TextView>
            <c:MemoEdit Value="$skuValue.Facing" Keyboard="numeric"></c:MemoEdit>
          </c:VerticalLayout>
        </c:HorizontalLayout>
        <c:HorizontalLine/>
      </s:If>

      <s:Push Id="useInQuestionnaire" Value="$CheckQuestionExistence($questionnaire, Stock, $sku)"></s:Push>
      <s:If Test="$useInQuestionnaire">
        <c:HorizontalLayout CssClass="grid">
          <c:VerticalLayout>
            <c:TextView Text="#stock#" CssClass="description_row"></c:TextView>
            <c:MemoEdit Value="$skuValue.Stock" Keyboard="numeric"></c:MemoEdit>
          </c:VerticalLayout>
        </c:HorizontalLayout>
        <c:HorizontalLine/>
      </s:If>

      <s:Push Id="useInQuestionnaire" Value="$CheckQuestionExistence($questionnaire, Price, $sku)"></s:Push>
      <s:If Test="$useInQuestionnaire">
        <c:HorizontalLayout CssClass="grid">
          <c:VerticalLayout>
            <c:TextView Text="#price#" CssClass="description_row"></c:TextView>
            <c:MemoEdit Value="$skuValue.Price" Keyboard="numeric"></c:MemoEdit>
          </c:VerticalLayout>
        </c:HorizontalLayout>
        <c:HorizontalLine/>
      </s:If>

      <s:Push Id="useInQuestionnaire" Value="$CheckQuestionExistence($questionnaire, MarkUp, $sku)"></s:Push>
      <s:If Test="$useInQuestionnaire">
        <c:HorizontalLayout CssClass="grid">
          <c:VerticalLayout>
            <c:TextView Text="#markUp#" CssClass="description_row"></c:TextView>
            <c:MemoEdit Value="$skuValue.MarkUp" Keyboard="numeric"></c:MemoEdit>
          </c:VerticalLayout>
        </c:HorizontalLayout>
        <c:HorizontalLine/>
      </s:If>

      <s:Push Id="useInQuestionnaire" Value="$CheckQuestionExistence($questionnaire, OutOfStock, $sku)"></s:Push>
      <s:If Test="$useInQuestionnaire">
        <c:HorizontalLayout  CssClass="grid">
          <c:VerticalLayout OnClickAction="$GoToQuestionAction(Boolean, $skuValue, $visit, cOutOfStock, OutOfStock)">
            <c:TextView Text="#available#" CssClass="description_row"></c:TextView>
            <c:TextView Id="cOutOfStock" Text="$skuValue.OutOfStock" CssClass="yes_TextView"></c:TextView>
          </c:VerticalLayout>
        </c:HorizontalLayout>
      </s:If>

      <s:Push Id="useInQuestionnaire" Value="$CheckQuestionExistence($questionnaire, Snapshot, $sku)"></s:Push>
      <s:If Test="$useInQuestionnaire">
        <c:HorizontalLayout CssClass="grid" OnClickAction="$GetSKUShapshot($workflow.visit,$skuValue,$snapshotInfo)">
          <c:VerticalLayout>
            <s:Push Id="snapshotText" Value="$GetSnapshotText($skuValue.Snapshot)"></s:Push>
            <c:TextView Id="snapshotInfo" Text="$snapshotText" CssClass="main_row"></c:TextView>
          </c:VerticalLayout>
        </c:HorizontalLayout>
        <c:HorizontalLine/>
      </s:If>

    </c:ScrollView>

  </c:DockLayout>

</c:Screen>




