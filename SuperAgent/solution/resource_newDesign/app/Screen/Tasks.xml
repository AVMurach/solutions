<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack">

  <s:Push Id="outlet" Value="$workflow.outlet"></s:Push>
  <s:Push Id="visit" Value="$workflow.visit"></s:Push>
  <s:Push Id="tasks" Value="$Facade.GetTasks($outlet)"></s:Push>

  <c:VerticalLayout>

    <c:DockLayout CssClass="top_navigator">
      <c:HorizontalLayout CssClass="btn_back" OnEvent="Back" OnClickAction="$Workflow.DoBack()">
        <c:Image/>
        <c:TextView Text="#client#"/>
      </c:HorizontalLayout>
      <c:Button Id="btnForward" Text="#forward#" OnEvent="Forward" CssClass="btn_forward" OnClickAction="$Facade.CheckNotNullAndCommit($outlet)"/>
      <c:TextView Text="#tasks#" />
    </c:DockLayout>

    <c:Image CssClass="2_scroll"></c:Image>
    <c:HorizontalLine/>

    <c:ScrollView Id="grScrollView">

      <c:HorizontalLayout CssClass="margin_top"></c:HorizontalLayout>
      <c:HorizontalLine/>

      <s:Iterator Id="task" Value="$tasks">

        <c:SwipeHorizontalLayout Id="swipe_layout">
          <c:HorizontalLayout CssClass="grid">
            <c:VerticalLayout>
              <s:Push Id="descr" Value="$Facade.GetOutlet($task)"></s:Push>
              <c:TextView Text="{$descr} {$task.PlanDate.DateString}" CssClass="description_row"></c:TextView>
              <c:TextView Text="$task.TextTask" CssClass="main_row"></c:TextView>
            </c:VerticalLayout>
            <c:Image/>
          </c:HorizontalLayout>
          <c:HorizontalLayout CssClass="red">

          </c:HorizontalLayout>
        </c:SwipeHorizontalLayout>
        <c:HorizontalLine/>

      </s:Iterator>
    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>