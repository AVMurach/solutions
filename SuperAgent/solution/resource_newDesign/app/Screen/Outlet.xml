<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" xmlns:d="DefaultScope">


  <s:If Test="$workflow.name!='Outlets'">
    <s:Push Id="workflow.outlet" Value="$outlet"></s:Push>
    <s:Push Id="workflow.questions_qty" Value="$Facade.ToInteger(0)"></s:Push>
    <s:Push Id="workflow.sku_qty" Value="$Facade.ToInteger(0)"></s:Push>
    <s:Push Id="workflow.sku_answ" Value="$Facade.ToInteger(0)"></s:Push>
    <s:Push Id="workflow.questionnaires" Value="$Facade.GetQuesttionaires($outlet)"></s:Push>


    <s:Push Id="workflow.visit" Value="$Facade.CreateVisitIfNotExists($outlet,$common.UserId, $workflow.visit, $planVisit)"/>
  </s:If>

  <c:VerticalLayout Id="vOutlet">

    <c:DockLayout CssClass="top_navigator">
      <c:HorizontalLayout CssClass="btn_back" OnClickAction="$Workflow.DoBack()">
        <c:Image/>
        <c:TextView Text="#visits#"/>
      </c:HorizontalLayout>
      <c:Button Id="btnForward" Text="#forward#" CssClass="btn_forward" OnClickAction="$Facade.CheckNotNullAndCommit($outlet)"/>
      <c:TextView Text="#client#" />
    </c:DockLayout>

    <c:Image CssClass="1_scroll"></c:Image>

    <c:ScrollView Id="grScrollView">

      <c:HorizontalLayout CssClass="caption_grid">
        <c:TextView Text="#main#:"></c:TextView>
      </c:HorizontalLayout>
      <c:HorizontalLine/>

      <s:If Test="$workflow.name=='Outlets'">
        <s:If Test="$outlet.IsNew">
          <c:VerticalLayout Id="headerDescr" CssClass="memo_header">
            <c:VerticalLayout  CssClass ="grid">

              <c:HorizontalLayout CssClass ="two_row_memo">
                <c:VerticalLayout>
                  <c:MemoEdit Id="outletDescr" Value="$outlet.Description" CssClass="main_row"></c:MemoEdit>
                  <c:TextView Text="#outlet_description#" CssClass="description_row"></c:TextView>
                </c:VerticalLayout>
              </c:HorizontalLayout>

              <c:HorizontalLine/>
            </c:VerticalLayout>
          </c:VerticalLayout>
          <c:HorizontalLine/>
        </s:If>
        <s:Else>
          <c:VerticalLayout Id="headerDescr" CssClass="header">
            <c:VerticalLayout  CssClass ="grid">

              <c:HorizontalLayout>
                <c:VerticalLayout>
                  <c:TextView Id="outletDescr" Text="$outlet.Description" CssClass="main_row"></c:TextView>
                  <c:TextView Text="#description#" CssClass="description_row"></c:TextView>
                </c:VerticalLayout>
              </c:HorizontalLayout>

              <c:HorizontalLine/>
            </c:VerticalLayout>
          </c:VerticalLayout>
          <c:HorizontalLine/>
        </s:Else>
      </s:If>
      <s:Else>

        <c:HorizontalLayout CssClass="grid">
          <c:VerticalLayout>
            <c:TextView Text="#description#" CssClass="description_row"></c:TextView>
            <c:TextView Id="outletDescr" Text="$outlet.Description" CssClass="main_row"></c:TextView>
          </c:VerticalLayout>
        </c:HorizontalLayout>
        <c:HorizontalLine/>

      </s:Else>

      <c:HorizontalLayout CssClass="grid">
        <c:VerticalLayout>
          <c:TextView Text="#address#" CssClass="description_row"></c:TextView>
          <c:MemoEdit Id="outletAddress" Value="$outlet.Address"></c:MemoEdit>
        </c:VerticalLayout>
      </c:HorizontalLayout>
      <c:HorizontalLine/>

      <c:HorizontalLayout CssClass="grid" OnClickAction="$Facade.ShowMapIfNotNew($outlet)">
        <c:VerticalLayout>
          <c:DockLayout>
            <c:TextView Text="#coordinates#"></c:TextView>
            <c:Button Text="#set#" OnClickAction="$Facade.SetLocation()"></c:Button>
          </c:DockLayout>
          <c:TextView Id="outletDescr" Text="{$outlet.Lattitude}; {$outlet.Longitude}" CssClass="main_row"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>
      <c:HorizontalLine/>

      <c:HorizontalLayout CssClass="caption_grid">
        <c:TextView Text="#additionally#:"></c:TextView>
      </c:HorizontalLayout>
      <c:HorizontalLine/>

      <c:DockLayout CssClass="parameter_grid" OnClickAction="$Workflow.DoAction(EditParameter,$outlet,Class,null)">
        <c:TextView Text="#outlet_class#"></c:TextView>
        <c:TextView Text="$outlet.ClassAsObject.Description" CssClass="value"></c:TextView>
      </c:DockLayout>
      <c:HorizontalLine/>

      <c:DockLayout CssClass="parameter_grid" OnClickAction="$Workflow.DoAction(EditParameter,$outlet,Type,null)">
        <c:TextView Text="#outlet_type#"></c:TextView>
        <c:TextView Id="outletType" Text="$outlet.TypeAsObject.Description" CssClass="value"></c:TextView>
      </c:DockLayout>
      <c:HorizontalLine/>

      <c:DockLayout CssClass="parameter_grid" OnClickAction="$Workflow.DoAction(EditParameter,$outlet,Distributor,null)">
        <c:TextView Text="#distributor#"></c:TextView>
        <c:TextView Id="outletDistr" Text="$outlet.DistributorAsObject.Description" CssClass="value"></c:TextView>
      </c:DockLayout>
      <c:HorizontalLine/>

      <s:Iterator Id="parameter" Value="$Facade.GetOutletParameters()">

        <s:Push Id="parameterValue" Value="$Facade.GetOutletParameterValue($outlet,$parameter)"/>

        <s:Push Id="true" Value="$Facade.ConvertToBoolean(true)"></s:Push>
        <c:DockLayout CssClass="parameter_grid" OnClickAction="$Facade.GoToParameterAction($parameter.DataTypeAsObject.Description, $parameterValue, Value, $outlet, $parameter)">

          <c:TextView Text="$parameter.Description"></c:TextView>
          <s:If Test="$parameterValue!=null">
            <c:TextView Text="$parameterValue.Value" CssClass="value"></c:TextView>
          </s:If>
          <s:Else>
            <c:TextView Id="paramValueTextView" Text="?" CssClass="value"></c:TextView>
          </s:Else>

        </c:DockLayout>

        <c:HorizontalLine/>

      </s:Iterator>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>