<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack">

  <s:Push Id="visit" Value="$workflow.visit"/>
  <s:Push Id="receivables" Value="$Facade.GetReceivables($visit.Outlet)"></s:Push>
  <s:Push Id="workflow.encashment" Value="$Facade.CreateEncashmentIfNotExist($workflow.visit, $param2, $workflow.autoSpread)"></s:Push>
  <s:Push Id="workflow.autoSpread" Value="$Facade.GetSpreadMode($workflow.autoSpread)"></s:Push>

  <c:VerticalLayout>

    <c:DockLayout CssClass="top_navigator">
      <c:HorizontalLayout CssClass="btn_back" OnEvent="Back" OnClickAction="$Workflow.DoBack()">
        <c:Image/>
        <c:TextView Text="#order#"/>
      </c:HorizontalLayout>
      <c:Button Id="btnForward" Text="#forward#" CssClass="btn_forward" OnEvent="Forward" OnClickAction="$Facade.SetAmountAndForward($workflow.encashment,$encashmentAttribute.Text)"/>
      <c:TextView Text="#encashment#" />
    </c:DockLayout>
    <c:HorizontalLine/>


    <c:ScrollView Id="grScrollView">


      <c:HorizontalLayout CssClass="header_edit_block">
        <c:VerticalLayout CssClass="half_width">
          <c:TextView Text="$receivableAmount" CssClass="main_row"></c:TextView>
          <c:TextView Text="#receivableAmount#" CssClass="description_row"></c:TextView>
        </c:VerticalLayout>
        <c:VerticalLayout CssClass="half_width">
          <c:EditText Id="encashmentAttribute" Text="$encashmentAmount" CssClass="main_row" Keyboard="numeric"></c:EditText>
          <c:TextView Text="#encashmentAmount#" CssClass="description_row"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>
      <c:HorizontalLine/>

      <c:HorizontalLayout  OnClickAction="$Workflow.DoRefresh($True,$encashmentAttribute.Text)">
        <c:VerticalLayout>
          <c:TextView Text="#spreadOnDocuments#" CssClass="caption_row"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>
      <c:HorizontalLine/>


      <c:HorizontalLayout CssClass="caption_grid">
        <c:TextView Text="#byDocs#:"></c:TextView>
      </c:HorizontalLayout>
      <c:HorizontalLine/>
      
      <s:Iterator Id="receivableDoc" Value="$receivables">

        <c:HorizontalLayout CssClass="grid">
          <c:VerticalLayout>
            <c:TextView Text="$receivableDoc.DocumentName" CssClass="description_row"></c:TextView>
            <c:DockLayout CssClass="parameter_grid">
              <c:TextView Text="#debt#: {$receivableDoc.DocumentSum}" CssClass="value"></c:TextView>
              <c:EditText Value="$visit.OutletAsObject.Description"></c:EditText>
            </c:DockLayout>
          </c:VerticalLayout>
        </c:HorizontalLayout>
        <c:HorizontalLine/>

      </s:Iterator>

      <c:HorizontalLayout CssClass="caption_grid">
        <c:TextView Text="#mainInfo#:"></c:TextView>
      </c:HorizontalLayout>
      <c:HorizontalLine/>

      <c:HorizontalLayout CssClass="grid">
        <c:VerticalLayout>
          <c:TextView Text="#docNumber#" CssClass="description_row"></c:TextView>
          <c:MemoEdit Value="$workflow.encashment.DocNumber" Keyboard="numeric"></c:MemoEdit>
        </c:VerticalLayout>
      </c:HorizontalLayout>
      <c:HorizontalLine/>

      <c:HorizontalLayout CssClass="grid">
        <c:VerticalLayout>
          <c:TextView Text="#nameSurname#" CssClass="description_row"></c:TextView>
          <c:MemoEdit Value="$workflow.encashment.NameSurname"></c:MemoEdit>
        </c:VerticalLayout>
      </c:HorizontalLayout>
      <c:HorizontalLine/>

      <c:HorizontalLayout CssClass="grid">
        <c:VerticalLayout>
          <c:TextView Text="#commentary#" CssClass="description_row"></c:TextView>
          <c:MemoEdit Value="$workflow.encashment.Commentary"></c:MemoEdit>
        </c:VerticalLayout>
      </c:HorizontalLayout>
      <c:HorizontalLine/>


    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>