<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack">

  <s:Push Id="screenFilter" Value="$SetFilter()"></s:Push>

  <c:DockLayout>

    <c:DockLayout CssClass="top_navigator">
      <c:Button Id="btnBack" CssClass="btn_back"/>
      <c:Button Id="btnForward" CssClass="btn_forward"/>
      <c:HorizontalLayout>
        <c:TextView Text="#filter#" />
      </c:HorizontalLayout>
    </c:DockLayout>

    <c:HorizontalLayout CssClass="bottom_btn">
      <c:VerticalLayout OnEvent="Back" OnClickAction="$AskAndBack()">
        <c:TextView Text="#discard#" CssClass="left_tv"></c:TextView>
      </c:VerticalLayout>
      <c:VerticalLayout OnEvent="Forward" OnClickAction="$CheckFilterAndForward()">
        <c:TextView Text="#apply#" CssClass="right_tv" ></c:TextView>
      </c:VerticalLayout>
    </c:HorizontalLayout>
    <c:HorizontalLine CssClass="b_line"/>

    <c:HorizontalLayout CssClass="small_grid">
      <s:Push Id="groupFilter" Value="$GetLeftFilterStyle(group)"></s:Push>
      <s:Push Id="brandFilter" Value="$GetRightFilterStyle(brand)"></s:Push>
      <c:HorizontalLayout CssClass="$groupFilter">
        <c:HorizontalLayout CssClass="select_zone" OnClickAction="$ChangeFilterAndRefresh(group)">
          <c:TextView Text="#groups#"></c:TextView>
        </c:HorizontalLayout>
      </c:HorizontalLayout>
      <c:HorizontalLayout CssClass="$brandFilter">
        <c:HorizontalLayout CssClass="select_zone" OnClickAction="$ChangeFilterAndRefresh(brand)">
          <c:TextView Text="#brands#"></c:TextView>
        </c:HorizontalLayout>
      </c:HorizontalLayout>
    </c:HorizontalLayout>
    <c:HorizontalLine/>

    <c:ScrollView Id="grScrollView">

      <c:HorizontalLayout CssClass="margin_top"></c:HorizontalLayout>
      <c:HorizontalLine/>

      <s:If Test="$filterType=='group'">
        <s:Push Id="parents" Value="$GetParentGroups()"></s:Push>
        <s:Iterator Id="parent" Value="$parents">

          <c:HorizontalLayout CssClass="parameter_grid" OnClickAction="$AddFilterAndRefresh($parent.Id, group_filter)">
            <s:Push Id="isSet" Value="$FilterIsSet($parent.Id, group_filter)"></s:Push>
            <s:If Test="$isSet">
              <c:Image CssClass="tick"/>
            </s:If>
            <s:Else>
              <c:VerticalLayout CssClass="empty_tick"></c:VerticalLayout>
            </s:Else>
            <c:TextView Text = "$parent.Description"></c:TextView>
          </c:HorizontalLayout>
          <c:HorizontalLine/>

          <s:Push Id="children" Value="$GetChildren($parent.Id)"></s:Push>
          <s:Iterator Id="child" Value="$children">
            <c:HorizontalLayout CssClass="parameter_grid" OnClickAction="$AddFilterAndRefresh($child.Id, group_filter)">
              <s:Push Id="isSet" Value="$FilterIsSet($child.Id, group_filter)"></s:Push>
              <s:If Test="$isSet">
                <c:Image CssClass="child_tick"/>
              </s:If>
              <s:Else>
                <c:VerticalLayout CssClass="child_empty_tick"></c:VerticalLayout>
              </s:Else>
              <s:Push Id="margin" Value="$GetChildDescription($child.Description)"></s:Push>
              <c:TextView Text = "$child.Description"></c:TextView>
            </c:HorizontalLayout>
            <c:HorizontalLine/>

          </s:Iterator>

        </s:Iterator>
      </s:If>


      <s:Else>
        <s:Push Id="brands" Value="$GetBrands()"></s:Push>
        <s:Iterator Id="brand" Value="$brands">

          <c:HorizontalLayout CssClass="parameter_grid" OnClickAction="$AddFilterAndRefresh($brand.Id, brand_filter)">
            <s:Push Id="isSet" Value="$FilterIsSet($brand.Id, brand_filter)"></s:Push>
            <s:If Test="$isSet">
              <c:Image CssClass="tick"/>
            </s:If>
            <s:Else>
              <c:VerticalLayout CssClass="empty_tick"></c:VerticalLayout>
            </s:Else>
            <c:TextView Text = "$brand.Description"></c:TextView>
          </c:HorizontalLayout>
          <c:HorizontalLine/>

        </s:Iterator>
      </s:Else>

    </c:ScrollView>

  </c:DockLayout>

</c:Screen>