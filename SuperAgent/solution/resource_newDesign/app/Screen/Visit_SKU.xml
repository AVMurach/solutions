<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" xmlns:d="DefaultScope">

  <s:Push Id="outlet" Value="$param1"></s:Push>
  <s:Push Id="visit" Value="$param2"></s:Push>
  <s:Push Id="sku" Value="$param3"></s:Push>
  <s:Push Id="questionnaires" Value="$param5"></s:Push>
  <s:Push Id="skuValue" Value="$Facade.CreateVisitSKUValueIfNotExists($visit,$sku,$param4,$questionnaires)"></s:Push>

  <c:DockLayout>

    <c:HorizontalLayout CssClass="done_btn" OnEvent="Back" OnClickAction="$Workflow.DoBack()">
      <c:TextView Text="#ready#"></c:TextView>
    </c:HorizontalLayout>

    <c:ScrollView Id="grScrollView">
      <s:Push Id="useInQuestionnaire" Value="$Facade.CheckQuestionExistence($questionnaires, Available, $sku)"></s:Push>
      <s:If Test="$useInQuestionnaire">
        <c:HorizontalLayout  CssClass="grid">
          <c:VerticalLayout>
            <c:TextView Text="#available#" CssClass="description_row"></c:TextView>
            <c:HorizontalLayout CssClass="parameter_grid">
              <c:TextView Text="$skuValue.Available" CssClass="yes_TextView"></c:TextView>
              <c:Button Text="#YES#" CssClass="yes_button" OnClickAction="$Facade.AssignAvailableValue($skuValue, Available, true)"></c:Button>
              <c:Button Text="#NO#" CssClass="yes_button" OnClickAction="$Facade.AssignAvailableValue($skuValue, Available, false)"></c:Button>
            </c:HorizontalLayout>
          </c:VerticalLayout>
        </c:HorizontalLayout>
        <c:HorizontalLine/>
      </s:If>

      <s:Push Id="useInQuestionnaire" Value="$Facade.CheckQuestionExistence($questionnaires, Facing, $sku)"></s:Push>
      <s:If Test="$useInQuestionnaire">
        <c:HorizontalLayout CssClass="grid">
          <c:VerticalLayout>
            <c:TextView Text="#facing#" CssClass="description_row"></c:TextView>
            <c:MemoEdit Id="memoAnswer" Value="$skuValue.Facing" Keyboard="numeric"></c:MemoEdit>
          </c:VerticalLayout>
        </c:HorizontalLayout>
        <c:HorizontalLine/>
      </s:If>

      <s:Push Id="useInQuestionnaire" Value="$Facade.CheckQuestionExistence($questionnaires, Stock, $sku)"></s:Push>
      <s:If Test="$useInQuestionnaire">
        <c:HorizontalLayout CssClass="grid">
          <c:VerticalLayout>
            <c:TextView Text="#stock#" CssClass="description_row"></c:TextView>
            <c:MemoEdit Value="$skuValue.Stock" Keyboard="numeric"></c:MemoEdit>
          </c:VerticalLayout>
        </c:HorizontalLayout>
        <c:HorizontalLine/>
      </s:If>

      <s:Push Id="useInQuestionnaire" Value="$Facade.CheckQuestionExistence($questionnaires, Price, $sku)"></s:Push>
      <s:If Test="$useInQuestionnaire">
        <c:HorizontalLayout CssClass="grid">
          <c:VerticalLayout>
            <c:TextView Text="#price#" CssClass="description_row"></c:TextView>
            <c:MemoEdit Value="$skuValue.Price" Keyboard="numeric"></c:MemoEdit>
          </c:VerticalLayout>
        </c:HorizontalLayout>
        <c:HorizontalLine/>
      </s:If>

      <s:Push Id="useInQuestionnaire" Value="$Facade.CheckQuestionExistence($questionnaires, MarkUp, $sku)"></s:Push>
      <s:If Test="$useInQuestionnaire">
        <c:HorizontalLayout CssClass="grid">
          <c:VerticalLayout>
            <c:TextView Text="#markUp#" CssClass="description_row"></c:TextView>
            <c:MemoEdit Value="$skuValue.MarkUp" Keyboard="numeric"></c:MemoEdit>
          </c:VerticalLayout>
        </c:HorizontalLayout>
        <c:HorizontalLine/>
      </s:If>

      <s:Push Id="useInQuestionnaire" Value="$Facade.CheckQuestionExistence($questionnaires, OutOfStock, $sku)"></s:Push>
      <s:If Test="$useInQuestionnaire">
        <c:HorizontalLayout  CssClass="grid">
          <c:VerticalLayout>
            <c:TextView Text="#available#" CssClass="description_row"></c:TextView>
            <c:HorizontalLayout CssClass="parameter_grid">
              <c:TextView Text="$skuValue.OutOfStock" CssClass="yes_TextView"></c:TextView>
              <c:Button Text="#YES#" CssClass="yes_button" OnClickAction="$Facade.AssignAvailableValue($skuValue, OutOfStock, true)"></c:Button>
              <c:Button Text="#NO#" CssClass="yes_button" OnClickAction="$Facade.AssignAvailableValue($skuValue, OutOfStock, false)"></c:Button>
            </c:HorizontalLayout>
          </c:VerticalLayout>
        </c:HorizontalLayout>
      </s:If>

      <s:Push Id="useInQuestionnaire" Value="$Facade.CheckQuestionExistence($questionnaires, Snapshot, $sku)"></s:Push>
      <s:If Test="$useInQuestionnaire">
        <c:HorizontalLayout CssClass="grid" OnClickAction="$Facade.GetSKUShapshot($skuValue)">
          <c:VerticalLayout>
            <s:Push Id="snapshotText" Value="$Facade.GetSnapshotText($skuValue.Snapshot)"></s:Push>
            <c:TextView Id="snapshotInfo" Text="$snapshotText" CssClass="main_row"></c:TextView>
          </c:VerticalLayout>
        </c:HorizontalLayout>
        <c:HorizontalLine/>
      </s:If>

    </c:ScrollView>

  </c:DockLayout>

</c:Screen>




