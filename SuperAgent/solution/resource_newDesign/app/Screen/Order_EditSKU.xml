<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" xmlns:d="DefaultScope">

  <s:Push Id="order" Value="$workflow.order"></s:Push>
  <s:Push Id="sku" Value="$param1"></s:Push>
  <s:Push Id="price" Value="$param2"></s:Push>
  <s:Push Id="orderitem" Value="$param3"></s:Push>
  <s:Push Id="showimage" Value="$param5"></s:Push>
  <s:Push Id="multiplier" Value="$Facade.GetMultiplier($sku.Id, $orderitem)"></s:Push>
  <s:Push Id="features" Value="$Facade.GetFeatures($sku.Id)"></s:Push>
  <s:Push Id="orderitem" Value="$Facade.CreateOrderItemIfNotExist($order.Id,$sku,$orderitem,$price,$features)"></s:Push>
  <s:Push Id="baseQty" Value="$Facade.GetMultiple($orderitem.Qty, $multiplier)"></s:Push>
  <s:Push Id="ismarkup" Value="$Facade.GetCheckBoxValue($orderitem.Discount)" />
  <s:Push Id="featureDescr" Value="$Facade.GetFeatureDescr($orderitem.FeatureAsObject)"></s:Push>

  <s:If Test="$showimage == null">
    <s:Push Id="showimage" Value="NotShow"></s:Push>
  </s:If >

  <c:DockLayout>

    <c:HorizontalLayout CssClass="margin_top"></c:HorizontalLayout>
    <c:HorizontalLine/>

    <c:HorizontalLayout CssClass="bottom_btn">
      <c:VerticalLayout OnEvent="Back" OnClickAction="$Facade.DeleteifNewItemAndBack()">
        <c:TextView Text="#cancel#" CssClass="left_tv"></c:TextView>
      </c:VerticalLayout>
      <c:VerticalLayout OnEvent="Forward" OnClickAction="$Facade.CalculateSKUAndForward($order.OutletAsObject, $orderitem)">
        <c:TextView Text="#add#" CssClass="right_tv" ></c:TextView>
      </c:VerticalLayout>
    </c:HorizontalLayout>
    <c:HorizontalLine/>

    <c:HorizontalLayout CssClass="caption_grid">
      <c:TextView Text="{$sku.Description}{$featureDescr}"></c:TextView>
    </c:HorizontalLayout>

    <c:ScrollView Id="grScrollView" CssClass="80_partial_scroll">

      <s:If Test="$sku.DefaultPicture != null">
        <s:If Test="$showimage == 'Show'">
          <c:ScrollView CssClass="60">
            <c:Image Source="$Facade.GetSharedImagePath(Catalog.SKU, $sku.Id, $sku.DefaultPicture, $sku.DefaultPictureExtension)"/>
          </c:ScrollView>
          <c:HorizontalLine/>
        </s:If >
      </s:If >

      <c:HorizontalLayout CssClass="caption_grid">
        <c:TextView Text = "#main#:"></c:TextView>
      </c:HorizontalLayout>
      <c:HorizontalLine/>

      <c:HorizontalLayout CssClass="caption_grid" OnClickAction="$Facade.CountPrice($orderitem)">
        <c:TextView Text="#countPrice#"></c:TextView>
      </c:HorizontalLayout>

      <c:DockLayout CssClass="parameter_grid">
        <c:TextView Text="#price#" CssClass="description_row"></c:TextView>
        <c:TextView Id ="orderItemTotalId" Text="$orderitem.Total" CssClass="value"></c:TextView>
      </c:DockLayout>
      <c:HorizontalLine/>

      <c:DockLayout CssClass="parameter_grid">
        <c:TextView Text="#quantity#" CssClass="description_row"></c:TextView>
        <c:EditText Value="$orderitem.Qty" CssClass="value" Keyboard="numeric"></c:EditText>
      </c:DockLayout>
      <c:HorizontalLine/>

      <c:DockLayout CssClass="parameter_grid" OnClickAction="$Facade.ChangeUnit($sku, $orderitem, $price)">
        <c:TextView Text="#packUnit#" ></c:TextView>
        <c:TextView Id="itemUnits" Text="$orderitem.UnitsAsObject.Description" CssClass="value"></c:TextView>
      </c:DockLayout>
      <c:HorizontalLine/>

      <c:DockLayout CssClass="parameter_grid" >
        <c:TextView Text="#discount#/#markUp#"></c:TextView>
        <c:EditText Id="discountEdit" Text="$param4" CssClass="value" Keyboard="numeric"></c:EditText>
      </c:DockLayout>
      <c:HorizontalLine/>

      <s:Push Id="historyItems" Value="$Facade.GetItemHistory($sku, $order)"></s:Push>
      <s:Push Id="historyCount" Value="$Facade.CountCollection($historyItems)"></s:Push>
      <s:If Test="$historyCount != 0">
        <c:HorizontalLayout CssClass="caption_grid">
          <c:TextView Text = "#orderHistory#:"></c:TextView>
        </c:HorizontalLayout>
        <c:HorizontalLine/>
        <s:Iterator Id="historyItem" Value="$historyItems">
          <c:DockLayout CssClass="parameter_grid">
            <c:TextView Text="$historyItem.RefAsObject.Date"></c:TextView>
            <s:Push Id="baseQty" Value="$Facade.GetBaseQty($sku, $historyItem)"></s:Push>
            <c:TextView Text="$baseQty" CssClass="value"></c:TextView>
          </c:DockLayout>
          <c:HorizontalLine/>
        </s:Iterator>
      </s:If>

      <c:HorizontalLayout CssClass="caption_grid">
        <c:TextView Text = "#features#:"></c:TextView>
      </c:HorizontalLayout>

      <s:Iterator Id="feature" Value="$features">
        <c:DockLayout CssClass="parameter_grid" OnClickAction="$Facade.ChangeFeatureAndRefresh($orderitem, $feature, $sku, $price, $discountEdit.Text, $showimage)">
          <c:TextView Text="$feature.FeatureAsObject.Description"></c:TextView>
        </c:DockLayout>
        <c:HorizontalLine/>

      </s:Iterator>

    </c:ScrollView>

  </c:DockLayout>

</c:Screen>



