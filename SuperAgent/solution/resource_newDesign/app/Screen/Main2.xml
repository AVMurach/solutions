<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack">

  <c:VerticalLayout CssClass="grid">

    <c:HorizontalLayout CssClass="header">
      <c:Image CssClass="btn_summary"/>
      <c:TextView Text="#summary#"></c:TextView>
    </c:HorizontalLayout>

    <c:DockLayout OnClickAction="$Workflow.DoAction(Visits)">
      <c:HorizontalLayout>
        <c:Image CssClass="btn_visits"/>
        <c:TextView Text="#visits#"></c:TextView>
      </c:HorizontalLayout>
      <c:TextView Text="60 | 72"></c:TextView>
    </c:DockLayout>
    <c:HorizontalLine/>

    <c:DockLayout>
      <c:HorizontalLayout>
        <c:Image CssClass="btn_orders"/>
        <c:TextView Text="#orders#"></c:TextView>
      </c:HorizontalLayout>
      <c:TextView Text="13 (580 087,00 руб.)"></c:TextView>
    </c:DockLayout>
    <c:HorizontalLine/>

    <c:DockLayout>
      <c:HorizontalLayout>
        <c:Image CssClass="btn_clients"/>
        <c:TextView Text="#clients#"></c:TextView>
      </c:HorizontalLayout>
      <c:TextView Text="145"></c:TextView>
    </c:DockLayout>
    <c:HorizontalLine/>

    <c:DockLayout>
      <c:HorizontalLayout>
        <c:Image CssClass="btn_stocks"/>
        <c:TextView Text="#stock#"></c:TextView>
      </c:HorizontalLayout>
    </c:DockLayout>
    <c:HorizontalLine/>

    <c:DockLayout>
      <c:HorizontalLayout>
        <c:Image CssClass="btn_kpi"/>
        <c:TextView Text="#kpi#"></c:TextView>
      </c:HorizontalLayout>
    </c:DockLayout>
    <c:HorizontalLine/>

    <c:DockLayout>
      <c:HorizontalLayout>
        <c:Image CssClass="btn_set"/>
        <c:TextView Text="#settings#"></c:TextView>
      </c:HorizontalLayout>
    </c:DockLayout>
    <c:HorizontalLine/>

    <c:DockLayout>
      <c:HorizontalLayout>
        <c:Image CssClass="btn_sync"/>
        <c:TextView Text="#sync#"></c:TextView>
      </c:HorizontalLayout>
      <c:TextView Text="11.04 14:49"></c:TextView>
    </c:DockLayout>
    <c:HorizontalLine/>

    <c:DockLayout>
      <c:HorizontalLayout>
        <c:Image CssClass="btn_info"/>
        <c:TextView Text="#info#"></c:TextView>
      </c:HorizontalLayout>
      <c:TextView Text="ver. 1.6.10.50"></c:TextView>
    </c:DockLayout>
    <c:HorizontalLine/>

  </c:VerticalLayout>

</c:Screen>