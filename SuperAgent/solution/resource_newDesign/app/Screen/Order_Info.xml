<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" xmlns:d="DefaultScope">

  <s:Push Id="order" Value="$workflow.order"></s:Push>
  <s:Push Id="sum" Value="$Facade.GetOrderSUM($workflow.order.Id)"></s:Push>
  <s:Push Id="priceLists" Value="$Facade.GetPriceListQty($order.Outlet)"></s:Push>

  <c:DockLayout>

    <c:DockLayout CssClass="top_navigator">
      <c:HorizontalLayout CssClass="btn_back" OnEvent="Back" OnClickAction="$Workflow.DoBack()">
        <c:Image/>
        <c:TextView Text="#order#"/>
      </c:HorizontalLayout>
      <c:Button Id="btnForward" Text="#forward#" CssClass="btn_forward" OnEvent="Forward" OnClickAction="$Workflow.DoBack()"/>
      <c:TextView Text="#information#" />
    </c:DockLayout>

    <c:ScrollView Id="grScrollView">

      <c:HorizontalLayout  CssClass="parameter_grid">
        <c:TextView Text="#totalamount#"></c:TextView>
        <c:TextView Text="$sum"  CssClass="value"></c:TextView>
      </c:HorizontalLayout>
      <c:HorizontalLine/>

      <c:DockLayout CssClass="parameter_grid" OnClickAction="$Facade.PriceListAction($workflow.order, $priceLists)">
        <c:TextView Text="#priceList#"></c:TextView>
        <s:If Test="$workflow.order.PriceListAsRef != null">
          <c:TextView Text="$workflow.order.PriceListAsObject.Description" CssClass="value"></c:TextView>
        </s:If>
        <s:Else>
          <s:If Test="$priceLists == 0">
            <c:TextView Text="#noPriceLists#" CssClass="value"></c:TextView>
          </s:If>
          <s:Else>
            <c:TextView Text="#isntSelected#" CssClass="value"></c:TextView>
          </s:Else>
        </s:Else>
      </c:DockLayout>
      <c:HorizontalLine/>


    </c:ScrollView>

  </c:DockLayout>

</c:Screen>



