<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" StyleSheet="Order.css">

  <c:VerticalLayout>

    <c:DockLayout CssClass="top_navigator">
      <c:HorizontalLayout CssClass="btn_back" OnEvent="Back" OnClickAction="$Workflow.DoBack()">
        <c:Image/>
        <c:TextView Text="#encashment#"/>
      </c:HorizontalLayout>
      <c:Button Id="btnForward" Text="#forward#" CssClass="btn_forward" OnEvent="Forward" OnClickAction="$Facade.CheckAndCommit()"/>
      <c:TextView Text="#visitTotal#" />
    </c:DockLayout>

    <c:Image CssClass="7_scroll"></c:Image>
    <c:HorizontalLine/>

    <c:ScrollView Id="grScrollView">

      <c:HorizontalLayout CssClass="caption_grid">
        <c:TextView Text="#additionally#:"></c:TextView>
      </c:HorizontalLayout>

      <c:HorizontalLayout CssClass="grid" OnClickAction="$Facade.SetDeliveryDate($order, DeliveryDate, $workflow.new)">
        <c:VerticalLayout>
          <c:TextView Text="#deliveryDate#" CssClass="description_row"></c:TextView>
          <c:TextView Id="deliveryDate" Text="$workflow.order.DeliveryDate" CssClass="main_row"></c:TextView>
        </c:VerticalLayout>
      </c:HorizontalLayout>
      <c:HorizontalLine/>

      <s:If Test="$Facade.AreEqual(ScheduledVisit, $workflow.name)">
        <s:If Test="$Facade.GetOrderControlValue()">
          <s:If Test="$Facade.OrderExists($workflow.visit)">
            <c:HorizontalLayout CssClass="grid" OnClickAction="$Workflow.DoAction(attributesFill, $workflow.visit, ReasonForNotOfTakingOrder, null)">
              <c:VerticalLayout>
                <c:TextView Text="#reasonForEmptyOrder#" CssClass="description_row"></c:TextView>
                <s:If Test="$workflow.visit.ReasonForNotOfTakingOrder==null">
                  <c:TextView Text="?" CssClass="main_row"></c:TextView>
                </s:If>
                <s:Else>
                  <c:TextView Text="$workflow.visit.ReasonForNotOfTakingOrderAsObject.Description" CssClass="main_row"></c:TextView>
                </s:Else>
              </c:VerticalLayout>
              <c:Image></c:Image>
            </c:HorizontalLayout>
            <c:HorizontalLine/>
          </s:If>
        </s:If>
      </s:If>

      <s:Push Id="unscheduledVisit" Value="$Facade.AreEqual(UnscheduledVisit, $workflow.name)"></s:Push>
      <s:If Test="$unscheduledVisit">
        <s:Push Id="UVRcontrol" Value="$Facade.GetUVRvalue()"></s:Push>
        <s:If Test="$UVRcontrol">
          <c:HorizontalLayout CssClass="grid" OnClickAction="$Workflow.DoAction(attributesFill, $workflow.visit, ReasonForVisit, null)">
            <c:VerticalLayout>
              <c:TextView Text="#visitReason#" CssClass="description_row"></c:TextView>
              <s:If Test="$workflow.visit.ReasonForVisit==null">
                <c:TextView Text="?" CssClass="main_row"></c:TextView>
              </s:If>
              <s:Else>
                <c:TextView Text="$workflow.visit.ReasonForVisitAsObject.Description" CssClass="main_row"></c:TextView>
              </s:Else>
            </c:VerticalLayout>
            <c:Image></c:Image>
          </c:HorizontalLayout>
          <c:HorizontalLine/>
        </s:If>
      </s:If>

      <c:HorizontalLayout CssClass="caption_grid">
        <c:TextView Text="#summary#:"></c:TextView>
      </c:HorizontalLayout>

      <c:DockLayout CssClass="parameter_grid">
        <s:Push Id="answered" Value="$Facade.CountAnswers($workflow.visit.Id, $workflow.sku_answ)"></s:Push>
        <s:Push Id="questions" Value="$Facade.GetSum($workflow.questions_qty, $workflow.sku_qty)"></s:Push>
        <c:TextView Text="{$answered} #of# {$questions}" CssClass="value"></c:TextView>
        <c:TextView Text="#questAnswers#"></c:TextView>
      </c:DockLayout>
      <c:HorizontalLine/>

      <c:DockLayout CssClass="parameter_grid">
        <s:Push Id="todoDone" Value="$Facade.CountEntities(Document, Visit_Task, $workflow.visit.Id, Ref)"></s:Push>
        <s:Push Id="todo" Value="$Facade.CountTasks($workflow.outlet)"></s:Push>
        <c:TextView Text="{$todoDone} #of# {$todo}" CssClass="value"></c:TextView>
        <c:TextView Text="#todoDone#"></c:TextView>
      </c:DockLayout>
      <c:HorizontalLine/>

      <c:DockLayout CssClass="parameter_grid">
        <c:TextView Text="{$Facade.GetOrderSUM($workflow.order.Id)}" CssClass="value"></c:TextView>
        <c:TextView Text="#orderSum#"></c:TextView>
      </c:DockLayout>
      <c:HorizontalLine/>

      <c:DockLayout CssClass="parameter_grid">
        <c:TextView Text="{$workflow.encashment.EncashmentAmount}" CssClass="value"></c:TextView>
        <c:TextView Text="#encashmentSum#"></c:TextView>
      </c:DockLayout>
      <c:HorizontalLine/>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>



