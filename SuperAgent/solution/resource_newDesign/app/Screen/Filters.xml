<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack">

  <s:Push Id="screenFilter" Value="$Facade.SetFilter()"></s:Push>

  <c:VerticalLayout>

    <c:DockLayout CssClass="top_navigator">
      <c:Button Id="btnBack" CssClass="btn_back"/>
      <c:Button Id="btnForward" CssClass="btn_forward"/>
      <c:TextView Text="#filter#" />
    </c:DockLayout>

    <c:HorizontalLayout CssClass="small_grid">
      <s:Push Id="groupFilter" Value="$Facade.GetLeftFilterStyle(group)"></s:Push>
      <s:Push Id="brandFilter" Value="$Facade.GetRightFilterStyle(brand)"></s:Push>
      <c:Button CssClass="$groupFilter" Text="#groups#"></c:Button>
      <c:Button CssClass="$brandFilter" Text="#brands#"></c:Button>
    </c:HorizontalLayout>
    <c:HorizontalLine/>

    <c:ScrollView Id="grScrollView">

      <s:If Test="$filterType=='group'">
        <s:Push Id="parents" Value="$Facade.GetParentGroups($common.UserId)"></s:Push>
        <s:Iterator Id="parent" Value="$parents">

          <c:HorizontalLayout CssClass="parameter_grid" OnClickAction="$Facade.AddFilterAndRefresh($parent, group_filter)">         
            <c:TextView Text = "$parent.Description"></c:TextView>
          </c:HorizontalLayout>
          <c:HorizontalLine/>

          <s:Push Id="children" Value="$Facade.GetChildren($parent)"></s:Push>
          <s:Iterator Id="child" Value="$children">
            <c:HorizontalLayout CssClass="parameter_grid" OnClickAction="$Facade.AddFilterAndRefresh($child, group_filter)">              
              <s:Push Id="margin" Value="$Facade.GetChildDescription($child.Description)"></s:Push>
              <c:TextView Text = "$margin"></c:TextView>
            </c:HorizontalLayout>
            <c:HorizontalLine/>

          </s:Iterator>

        </s:Iterator>
      </s:If>


      <s:Else>
        <s:Push Id="brands" Value="$Facade.GetBrands()"></s:Push>
        <s:Iterator Id="brand" Value="$brands">

          <c:HorizontalLayout OnClickAction="$Facade.AddFilterAndRefresh($brand, brand_filter)">
            <c:VerticalLayout>
              <c:TextView Text = "$brand.Description" CssClass = "main_row"></c:TextView>
            </c:VerticalLayout>
            <s:Push Id="isSet" Value="$Facade.FilterIsSet($brand.Id, brand_filter)"></s:Push>
            <s:If Test="$isSet">
              <c:Image CssClass="tick"/>
            </s:If>
            <s:Else>
              <c:Image CssClass="empty_tick"/>
            </s:Else>
          </c:HorizontalLayout>
          <c:HorizontalLine/>

        </s:Iterator>
      </s:Else>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>