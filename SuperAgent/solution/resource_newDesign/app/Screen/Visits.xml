<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack">

  <s:Push Id="search" Value="$param1"/>
  <s:Push Id="outlets" Value="$Facade.GetScheduledVisits($search)" />

  <c:VerticalLayout>

    <c:DockLayout CssClass="top_navigator">
      <c:Button Id="btnBack" CssClass="btn_menu" OnEvent="Back" OnClickAction="$Workflow.DoBack()"/>
      <c:Button Id="btnForward" Text="#map#" CssClass="btn_forward" />
      <c:TextView Text="#visits#" />
    </c:DockLayout>

    <c:HorizontalLayout CssClass="small_grid">
      <s:Push Id="sv" Value="$Facade.CountCollection($outlets)"></s:Push>
      <c:Button CssClass="mode_left_button_on" Text="#planVisit# ({$sv})"></c:Button>
      <c:Button CssClass="mode_right_button_off" Text="#unplanned# ()"></c:Button>
    </c:HorizontalLayout>
    <c:HorizontalLine/>

    <c:HorizontalLayout CssClass="search">
      <c:DockLayout >
        <c:Image />
        <c:EditText Id="edtSearch" Text="$search"></c:EditText>
      </c:DockLayout>
      <c:Button Id="btnSearch" Text="#search#" OnClickAction="$Workflow.DoRefresh($edtSearch.Text)"></c:Button>
    </c:HorizontalLayout>
    <c:HorizontalLine/>
    <c:HorizontalLine/>

    <c:ScrollView>

      <c:HorizontalLayout CssClass="caption_grid">
        <s:Push Id="uncommitedVisits" Value="$Facade.GetUncommitedScheduledVisits($search, $outlets)"></s:Push>
        <s:Push Id="sv" Value="$Facade.CountCollection($uncommitedVisits)"></s:Push>
        <c:TextView Text="НЕВЫПОЛНЕННЫЕ_ВИЗИТЫ ({$sv}):"></c:TextView>
      </c:HorizontalLayout>
      <c:HorizontalLine/>


        <s:Iterator Id="outlet" Value="$uncommitedVisits">
          <s:Push Id="planVisit" Value="$outlet.RefAsObject"></s:Push>
          <s:Push Id="planOutlet" Value="$outlet.OutletAsObject"></s:Push>

          <c:HorizontalLayout CssClass="grid" OnClickAction="$Workflow.DoAction(Select,$planOutlet,$planVisit)">
            <s:If Test="$planOutlet.ConfirmationStatusAsObject.Description == 'New'">
              <c:Image CssClass="yellow_mark"/>
            </s:If>
            <s:Else>
              <c:VerticalLayout CssClass="no_mark"></c:VerticalLayout>
            </s:Else>
              <c:VerticalLayout>
              <c:TextView Text="$planOutlet.Description" CssClass="main_row"></c:TextView>
              <c:TextView Text="{$planOutlet.Address}" CssClass="description_row"></c:TextView>
            </c:VerticalLayout>
            <c:Image/>
          </c:HorizontalLayout>
          <c:HorizontalLine/>

        </s:Iterator>
      

      <c:HorizontalLayout CssClass="caption_grid">

        <s:Push Id="commitedVisits" Value="$Facade.GetCommitedScheduledVisits($search, $outlets)"></s:Push>
        <s:Push Id="cv" Value="$Facade.CountCollection($commitedVisits)"></s:Push>
        <c:TextView Text="ВЫПОЛНЕННЫЕ_ВИЗИТЫ ({$cv}):"></c:TextView>
      </c:HorizontalLayout>
      <c:HorizontalLine/>


        <s:Iterator Id="outlet" Value="$commitedVisits">
          <s:Push Id="planOutlet" Value="$outlet.OutletAsObject"></s:Push>

          <c:HorizontalLayout CssClass="grid">
            <s:If Test="$planOutlet.ConfirmationStatusAsObject.Description == 'New'">
              <c:Image CssClass="yellow_mark"/>
            </s:If>
            <s:Else>
              <c:VerticalLayout CssClass="no_mark"></c:VerticalLayout>
            </s:Else>
            <c:VerticalLayout>
              <c:TextView Text="$planOutlet.Description" CssClass="main_row"></c:TextView>
              <c:TextView Text="{$planOutlet.Address}" CssClass="description_row"></c:TextView>
            </c:VerticalLayout>
            <c:Image/>
          </c:HorizontalLayout>
          <c:HorizontalLine/>

        </s:Iterator>
      

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>