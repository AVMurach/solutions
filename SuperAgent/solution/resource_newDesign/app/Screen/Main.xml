<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" StyleSheet="Main.css">

  <c:SwipeHorizontalLayout Id="swipe_layout" Index="1">
    <c:VerticalLayout CssClass="menu">

      <c:HorizontalLayout CssClass="header" OnEvent="Forward" OnClickAction="$CloseMenu()">
        <c:Image CssClass="btn_summary"/>
        <c:TextView CssClass="menu_text" Text="#summary#"></c:TextView>
      </c:HorizontalLayout>

      <c:DockLayout OnClickAction="$DoAction(Visits)">
        <c:HorizontalLayout>
          <c:Image CssClass="btn_visits"/>
          <c:TextView CssClass="menu_text" Text="#visits#"></c:TextView>
        </c:HorizontalLayout>
      </c:DockLayout>
      <c:HorizontalLine/>

      <c:DockLayout>
        <c:HorizontalLayout>
          <c:Image CssClass="btn_orders"/>
          <c:TextView CssClass="menu_text" Text="#orders#"></c:TextView>
        </c:HorizontalLayout>
      </c:DockLayout>
      <c:HorizontalLine/>

      <c:DockLayout>
        <c:HorizontalLayout>
          <c:Image CssClass="btn_clients"/>
          <c:TextView CssClass="menu_text" Text="#clients#"></c:TextView>
        </c:HorizontalLayout>
      </c:DockLayout>
      <c:HorizontalLine/>

      <c:DockLayout  OnClickAction="$Sync()">
        <c:HorizontalLayout>
          <c:Image CssClass="btn_sync"/>
          <c:TextView CssClass="menu_text" Text="#sync#"></c:TextView>
        </c:HorizontalLayout>
      </c:DockLayout>
      <c:HorizontalLine/>

      <c:DockLayout>
        <c:HorizontalLayout>
          <c:Image CssClass="btn_info"/>
          <c:TextView CssClass="menu_text" Text="#info#"></c:TextView>
        </c:HorizontalLayout>
        <c:TextView CssClass="menu_text" Text="ver. 1.6.10.50"></c:TextView>
      </c:DockLayout>
      <c:HorizontalLine/>

    </c:VerticalLayout>
    <c:VerticalLayout>

      <c:DockLayout CssClass="top_navigator">
        <c:HorizontalLayout CssClass="btn_menu" OnClickAction="$Facade.OpenMenu()">
			<c:Image CssClass="menuIcon"/>
        </c:HorizontalLayout>
		<c:HorizontalLayout CssClass="btn_forward"/>
		<c:HorizontalLayout>
			<c:TextView Text="#summary#" />
		</c:HorizontalLayout>	
      </c:DockLayout>

      <c:HorizontalLayout CssClass="small_grid">
        <c:HorizontalLayout CssClass="mode_left_button_on">
			<c:HorizontalLayout CssClass="select_zone">
				<c:TextView Text="#new#"></c:TextView>
			</c:HorizontalLayout>
		</c:HorizontalLayout>
        <c:HorizontalLayout CssClass="mode_right_button_off">
			<c:HorizontalLayout CssClass="select_zone">
				<c:TextView Text="#done#"></c:TextView>
			</c:HorizontalLayout>
		</c:HorizontalLayout>
      </c:HorizontalLayout>
      <c:HorizontalLine CssClass="navy"/>

      <c:VerticalLayout CssClass="blue">

        <c:DockLayout>
          <c:VerticalLayout CssClass="summ">
            <c:TextView Text="3"></c:TextView>
            <c:TextView Text="визита" CssClass="descr"></c:TextView>
          </c:VerticalLayout>

          <c:VerticalLayout  CssClass="docs">
            <c:HorizontalLayout CssClass="grid">
              <c:Image CssClass="yellow_mark"/>
              <c:VerticalLayout>
                <c:TextView Text="222222222255 222222222255 222222222255 222 2222 222 55 222222222255 222222222255 " CssClass="main_row"></c:TextView>
                <c:TextView Text="Count city, 3333333 str., 33" CssClass="description_row"></c:TextView>
              </c:VerticalLayout>
			  <c:Image/>
            </c:HorizontalLayout>
            <c:HorizontalLine CssClass="short_line"/>

            <c:HorizontalLayout CssClass="grid">
              <c:Image CssClass="yellow_mark"/>
              <c:VerticalLayout>
                <c:TextView Text="333333333333 222222222255 222222222255 222 2222 222 55 222222222255 222222222255 " CssClass="main_row"></c:TextView>
                <c:TextView Text="Count city, 3333333 str., 33" CssClass="description_row"></c:TextView>
              </c:VerticalLayout>
			  <c:Image/>
            </c:HorizontalLayout>
			<c:HorizontalLine CssClass="short_line"/>
          </c:VerticalLayout>

        </c:DockLayout>

        <c:DockLayout>

          <c:VerticalLayout CssClass="summ">
            <c:TextView Text="2"></c:TextView>
            <c:TextView Text="заказа" CssClass="descr"></c:TextView>
          </c:VerticalLayout>

          <c:VerticalLayout CssClass="docs">
            <c:HorizontalLayout CssClass="grid">
              <c:Image CssClass="yellow_mark"/>
              <c:VerticalLayout>
                <c:TextView Text="222222222255 222222222255 222222222255 222 2222 222 55 222222222255 222222222255 " CssClass="main_row"></c:TextView>
                <c:TextView Text="Count city, 3333333 str., 33" CssClass="description_row"></c:TextView>
              </c:VerticalLayout>
			  <c:Image/>
            </c:HorizontalLayout>
            <c:HorizontalLine CssClass="short_line"/>

            <c:HorizontalLayout CssClass="grid">
              <c:Image CssClass="yellow_mark"/>
              <c:VerticalLayout>
                <c:TextView Text="333333333333 222222222255 222222222255 222 2222 222 55 222222222255 222222222255 " CssClass="main_row"></c:TextView>
                <c:TextView Text="Count city, 3333333 str., 33" CssClass="description_row"></c:TextView>
              </c:VerticalLayout>
			  <c:Image/>
            </c:HorizontalLayout>
            <c:HorizontalLine CssClass="short_line"/>
		  </c:VerticalLayout>
        </c:DockLayout>

      </c:VerticalLayout>

    </c:VerticalLayout>
  </c:SwipeHorizontalLayout>

</c:Screen>