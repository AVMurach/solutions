<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack">

  <s:Push Id="task" Value="$param1"></s:Push>
  
  <c:VerticalLayout>

    <c:HorizontalLayout CssClass="topNavigator">
      <c:Button CssClass="btnBack" OnClickAction="Back"/>
      <c:TextView Text="#tasks#" />
      <c:Button CssClass="btnForward" OnClickAction="Back"/>
    </c:HorizontalLayout>

    <c:HorizontalLine/>

    <c:ScrollView CssClass="grid">

      <c:HorizontalLayout>

          <c:VerticalLayout>
            <c:TextView Text="$task.TextTask" CssClass="H1"></c:TextView>
            <c:TextView Text="#description#" CssClass="H2"></c:TextView>
          </c:VerticalLayout>

        </c:HorizontalLayout>

        <c:HorizontalLine/>

      <c:HorizontalLayout>

        <c:VerticalLayout>
          <c:TextView Text="$task.Result" CssClass="H1"></c:TextView>
          <c:TextView Text="#result#" CssClass="H2"></c:TextView>
        </c:VerticalLayout>

      </c:HorizontalLayout>

      <c:HorizontalLine/>

      <c:HorizontalLayout>

        <c:VerticalLayout>
          <c:TextView Text="$task.DateOfCompletion" CssClass="H1"></c:TextView>
          <c:TextView Text="#endtime#" CssClass="H2"></c:TextView>
        </c:VerticalLayout>

      </c:HorizontalLayout>

      <c:HorizontalLine/>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>