<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack">

  <s:Push Id="outlet" Value="$param1"></s:Push>
  <s:Push Id="visit" Value="$param2"></s:Push>
  
  <s:If Test="$outlet==null">
    <s:Push Id="tasks" Value="select * from $dao.Document.Task"></s:Push>  
  </s:If>
  <s:Else>
    <s:Push Id="tasks" Value="select * from $dao.Document.Task where Outlet == $visit.OutletAsObject.Id"></s:Push>
  </s:Else>
    
  <c:VerticalLayout>

    <c:HorizontalLayout CssClass="topNavigator">
      <c:Button CssClass="btnBack" OnClickAction="Back"/>
      <c:TextView Text="#tasks#" />
      <c:Button CssClass="btnForward" OnClickAction="Forward:$visit"/>
    </c:HorizontalLayout>

    <c:HorizontalLine/>

    <c:ScrollView CssClass="grid">

      <s:Iterator Id="task" Value="$tasks">


        <c:HorizontalLayout OnClickAction="Select:$task,$visit">

          <c:VerticalLayout>
            <c:TextView Text="$task.TextTask" CssClass="H1"></c:TextView>
            <c:HorizontalLayout>
              <c:TextView Text="$task.OutletAsObject.Description" CssClass="H2"></c:TextView>
            </c:HorizontalLayout>
          </c:VerticalLayout>

          <c:Image/>

        </c:HorizontalLayout>

        <c:HorizontalLine/>
      </s:Iterator>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>