<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack">

  <s:Push Id="search" Value="$param1"/>
  <s:If Test="$search==null">
    <s:Push Id="outlets" Value="select distinct(OutletAsObject) from $dao.Catalog.Territory_Outlets"></s:Push>
  </s:If>
  <s:Else>
    <s:Push Id="outlets" Value="select distinct(OutletAsObject) from $dao.Catalog.Territory_Outlets where OutletAsObject.Description.Contains($search)"></s:Push>
  </s:Else>

  <c:VerticalLayout>

    <c:HorizontalLayout CssClass="topNavigator">
      <c:Button CssClass="btnBack" OnClickAction="Back"/>
      <c:TextView Text="#outlets#" />
      <c:Button CssClass="btnForward" OnClickAction="Back"/>
    </c:HorizontalLayout>

    <c:HorizontalLine/>

    <c:HorizontalLayout CssClass="search">

      <c:HorizontalLayout >
        <c:Image />
        <c:EditText Id="edtSearch" Text="$search"></c:EditText>
      </c:HorizontalLayout>
      <c:Button Text="#search#" OnClickAction="RefreshScreen:$edtSearch.Text"></c:Button>

    </c:HorizontalLayout>

    <c:HorizontalLine/>

    <c:ScrollView CssClass="grid">

        <s:Iterator Id="outlet" Value="$outlets">

          <c:HorizontalLayout OnClickAction="Select:$outlet, ">

            <c:VerticalLayout>
              <c:TextView Text="$outlet.Description" CssClass="H1"></c:TextView>
              <c:TextView Text="$outlet.Address" CssClass="H2"></c:TextView>
            </c:VerticalLayout>

            <c:Image/>

          </c:HorizontalLayout>

          <c:HorizontalLine/>
        </s:Iterator>

    </c:ScrollView>

  </c:VerticalLayout>

</c:Screen>